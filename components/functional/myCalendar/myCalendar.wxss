/* components/business/myCalendar/myCalendar.wxss */
.calendar {
  position: relative;
}
.open {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 9rpx;
  padding: 10rpx;
  display: block;
}
.icon {
  display: block;
  border-top: 4rpx solid;
  border-right: 4rpx solid;
  width: 11rpx;
  height: 11rpx;
  border-color: #2878FF;
  transform: rotate(135deg);
}
.wrap {
  width: 100%;
  height: 190rpx;
  padding: 34rpx 0 41rpx;
  box-sizing: border-box;
  white-space: nowrap;
  background: #fff;
}
.item {
  width: 14.285%;
  display: inline-block;
}
.item.head {
  width: 132rpx;
  vertical-align: top;
}
.item .have {
  position: relative;
}
.item .overdue::after {
  content: '';
  width: 12rpx;
  height: 12rpx;
  bottom: 0rpx;
  left: 50%;
  margin-left: -6rpx;
  border-radius: 50%;
  background: #BCBCBC;
  position: absolute;
}
.item .noOverdue::after {
  content: '';
  width: 12rpx;
  height: 12rpx;
  bottom: 0rpx;
  left: 50%;
  margin-left: -6rpx;
  border-radius: 50%;
  background: #FF7F4C;
  position: absolute;
}

.day, .week, .month {
  display: block;
  text-align: center;
}

.week {
  height: 22rpx;
  font-size: 22rpx;
  line-height: 22rpx;
  color: #282828;
}
.day {
  width: 68rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 32rpx;
  color: #282828;
  margin: 25rpx auto 0;
}
.day.curDay {
  border-radius: 50%;
  background: #E4EEFF;
}
.day.choseDate {
  border-radius: 50%;
  background: #2878FF;
  color: #fff;
}
.month {
  height: 90rpx;
  line-height: 90rpx;
  background:rgba(228,238,255,0.3);
}

.bigCalendar {
  background-color: #fff;
}
.calendar-header {
  font-size: 32rpx; /*修改了标题文字和按钮的大小*/
  color: #2878FF;   /*修改了标题文字和按钮的颜色*/
  font-weight: 700;
}
.calendar-board {
  color: #282828;
  font-weight: 500;
}
