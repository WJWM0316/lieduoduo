<!--components/business/myCalendar/myCalendar.wxml-->
<scroll-view class="wrap" scroll-x style="width: 100%" scroll-left="{{scrollLeft}}px" bindscrolltolower="nextMonth" bindscrolltoupper="prevMonth" bindscroll="scroll" upper-threshold lower-threshold>
  <view wx:for="{{list}}" wx:key="{{index}}" class="item {{item.month && !item.day ? 'head' : ''}} {{index === list.length - 1 ? 'last': ''}}">
    <block wx:if="{{item.day}}">
      <view class="week">{{item.week}}</view>
      <view class="day {{item.day === day && item.month === month ? 'curDay' : ''}}">{{item.day}}</view>
    </block>
    <block wx:else>
      <view class="month">{{item.month}}æœˆ</view>
    </block>
  </view>
</scroll-view>
