@import '../../../iconfont.wxss'
.downLoadApp {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: rgba(0, 0, 0, .5);
	display: flex;
	justify-content: center;
	align-items: center;
	z-index: 10;
}
.inner {
	width: 650rpx;
	background: #fff;
	border-radius: 18rpx;
	padding: 74rpx 50rpx 56rpx;
	text-align: center;
	box-sizing: border-box;
	position: relative;
}
.close {
	padding: 30rpx;
	font-size: 30rpx;
	position: absolute;
	top: 0;
	right: 0;
	color: #CDCBCF;
}
.title {
	font-size:36rpx;
	font-weight:700;
	color:#282828;
	line-height:36rpx;
}
.content {
	font-size:30rpx;
	color:#282828;
	line-height:46rpx;
	margin: 16rpx auto 40rpx;
}
.picture {
	width: 442rpx;
	height: 340rpx;
	margin: 0 auto;
	display: block;
}
.btn1, .btn2 {
	width: 100%;
	height: 88rpx;
	line-height: 88rpx;
	border-radius:49rpx;
	font-size:32rpx;
	color:#fff;
}
.btn1 {
	margin-top: 44rpx;
	background: #652791;
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
}
.btn2 {
	margin-top: 21rpx;
	border: 2rpx solid #652791;
	color: #652791;
}