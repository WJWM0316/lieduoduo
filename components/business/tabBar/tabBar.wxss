
.tabBar {
  width: 100%;
  height: 98rpx;
  background: #fff;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #CCD7DD;
  box-sizing: border-box;
}

.tabBar-item {
  flex: 1;
  height: 100%;
  text-align: center;
  position: relative;
}

.tabIcon {
  width: 54rpx;
  height: 54rpx;
  display: block;
  margin: 11rpx auto 6rpx;
}

.tabBar-item .p {
  font-size: 20rpx;
  font-weight: 400;
  color:rgba(185,191,203,1);
  line-height: 20rpx;
}

.tabBar-item .tap {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 1;
}

.tabBar-item-active.tabBar-item .p  {
  color:rgba(101,39,145,0.8);
}
