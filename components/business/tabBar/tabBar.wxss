/* components/business/tabBar/tabBar.wxss */
@import '../../../iconfont.wxss';

.tabBar {
  width: 100%;
  height: 98rpx;
  background: #fff;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.tabBar-item {
  flex: 1;
  text-align: center;
  font-size:20rpx;
  font-weight:400;
  color:#B9BFCB;
  position: relative;
}

.tabBar-item .p {
  margin-top: 5rpx;
}

.tabBar-item .tap {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 1;
}

.tabBar-item-active {
  color:#2878FF;
}