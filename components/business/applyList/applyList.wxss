@import '../../../iconfont.wxss';

.apply-list-ul {
	overflow: hidden;
}

.apply-list-ul .li {
	overflow: hidden;
	position: relative;
	background:rgba(255,255,255,1);
	padding: 28rpx;
	margin-bottom: 24rpx;
	box-shadow:0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
	border-radius:10rpx;
}

.apply-list-ul .li:last-child {
	margin-bottom: 0;
}

.apply-list-ul .li .img-box {
	width: 52rpx;
	height: 52rpx;
	background: rgba(0,0,0,.1);
	border-radius: 50%;
	display: inline-block;
	vertical-align: middle;
	box-sizing: border-box;
	position: relative;
}

.apply-list-ul .li .is-certification {
	width:22rpx;
	height:22rpx;
	background:rgba(255,127,76,1);
	border:2rpx solid rgba(255,255,255,1);
	box-sizing: border-box;
	border-radius: 50%;
	position: absolute;
	bottom: 0;
	right: 0;
}

.apply-list-ul .li .realname-position {
	width: calc(100% - 52rpx - 16rpx);
	display: inline-block;
	margin-left: 16rpx;
	font-size:24rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	line-height:26rpx;
}

.apply-list-ul .li .row {
	overflow: hidden;
	position: relative;
}

.apply-list-ul .li .first {
	margin-top: 5rpx;
}

.apply-list-ul .li .second {
	margin-top: 20rpx;
	line-height: 26rpx;
}

.apply-list-ul .li .three {
	margin-top: 25rpx;
	line-height: 34rpx;
}

.apply-list-ul .li .four {
	margin-top: 25rpx;
}

.apply-list-ul .li .recruitment-position {
	float: left;
	font-size:32rpx;
	font-weight:600;
	color:rgba(53,64,72,1);
	line-height:32rpx;
}

.apply-list-ul .li .company-salary {
	float: right;
	font-size:32rpx;
	font-weight:bold;
	color:rgba(255,127,76,1);
	line-height:32rpx;
}

.apply-list-ul .li .company-name {
	font-size:24rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	display: inline-block;
}

.apply-list-ul .li .company-nature {
	font-size:24rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	display: inline-block;
}

.apply-list-ul .li .company-address {
	display: inline-block;
	font-size:24rpx;
	font-weight:400;
	color:rgba(146,146,146,1);
	background:rgba(248,248,248,1);
	border-radius:4px;
	margin-right: 16rpx;
	padding: 0 12rpx;
}

.apply-list-ul .li .company-experience {
	display: inline-block;
	font-size:24rpx;
	font-weight:400;
	color:rgba(146,146,146,1);
	background:rgba(248,248,248,1);
	border-radius:4px;
	margin-right: 16rpx;
	padding: 0 12rpx;
}

.apply-list-ul .li .company-degress {
	display: inline-block;
	font-size:24rpx;
	font-weight:400;
	color:rgba(146,146,146,1);
	background:rgba(248,248,248,1);
	border-radius:4px;
	margin-right: 16rpx;
	padding: 0 12rpx;
}
