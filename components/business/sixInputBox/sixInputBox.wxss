/* 支付密码框 */

.pay_number {
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  height: 88rpx;
}

/* 单个格式样式 */

.password_dot {
  flex: 1;
  border-bottom: 1px solid #cfd4d3;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 24rpx;
  font-size: 88rpx;
  line-height: 1;
  padding-bottom: 16rpx;
}

.active{
  border-color:#652791;
}

.error{
  border-color:#ED5C5C;
}

/* 输入框 */

.input_container {
  height: 0;
  width: 0;
  min-height: 0;
  position: relative;
  text-indent: -999em;
  left: -100%;
}
