@import '../../../iconfont.wxss';
.download-app {
	position: fixed;
	left: 0;
	bottom: 0;
	right: 0;
	top: 0;
	background: rgba(0,0,0,.6);
	z-index: 10000000;
}

.download-app .box {
	background: white;
	padding: 56rpx 50rpx 0 50rpx;
	border-radius: 18rpx;
	position: absolute;
	top: 50%;
	box-sizing: border-box;
	transform: translateY(-50%);
	left: 50rpx;
	right: 50rpx;
	text-align: center;
	transition: all ease .2s;
}

.download-app .button {
	height:88rpx;
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	border-radius:49rpx;
	font-size:32rpx;
	font-weight:400;
	color:rgba(255,255,255,1);
	text-align: center;
	line-height: 88rpx;
	margin-bottom: 56rpx;
	margin-top: 48rpx;
}

.download-app .p1 {
	line-height:36rpx;
	text-align: center;
	height:36rpx;
	font-size:36rpx;
	font-weight:700;
	color:rgba(40,40,40,1);
  line-height:44rpx;
}

.download-app .p2 {
	text-align: center;
	line-height:44rpx;
  margin-top: 16rpx;
  font-size:30rpx;
  color:rgba(40,40,40,1);
  line-height:46rpx;
}

.download-app .icon-close {
	position: absolute;
	top: 31rpx;
	right: 31rpx;
	color: #CDCBCF;
}

.download-app image {
	width: 440rpx;
	height: 290rpx;
	margin: 38rpx auto 32rpx auto;
}