.topicList{
  width: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.headIMg{
  position: relative;
}
.headIMg .icon{
  position: absolute;
  bottom: 21rpx;
  right: 0;
  border-radius: 50%;
  overflow: hidden;
  width: 48rpx;
  height: 48rpx;
}
.headIMg .icon image{
  width: 100%;
  height: 100%;
}
.headIMg image{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background-color: #ccc;
  margin-bottom: 24rpx;
  box-shadow:0px 2px 12px 0px rgba(0,0,0,0.12);
}
.first .icon{
  width: 60rpx;
  height: 60rpx;
}
.first image{
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 19rpx;
}
.name{
  font-size: 36rpx;
  color: #282828;
  font-weight: 500;
  text-align: center;
}
.title{
  font-size: 24rpx;
  font-weight: 300;
  color: #282828;
  margin-top: 10rpx;
}
.influence{
  padding: 0 24rpx;
  height: 52rpx;
  border-radius: 26rpx;
  background-color: #2878FF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 23rpx;
}
.influence text{
  color: #fff;
  font-size: 22rpx;
  font-weight: 300;
}
.influence .num{
  font-weight: 500;
  font-size: 26rpx;
  margin-left: 10rpx;
}