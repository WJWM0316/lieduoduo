@import '../../../iconfont.wxss'

.actionSheet .tip {
  font-size:26rpx;
  font-weight:300;
  color:#282828;
  line-height:26rpx;
  text-align: center;
}
.actionSheet .tip .txt {
  color: #652791;
}
.actionSheet .tipTitle {
  font-size:32rpx;
  color:#5D565D;
  line-height:32rpx;
  margin-top: 44rpx;
  text-align: center;
}
.actionSheet .num {
  font-size:100rpx;
  font-weight:700;
  color:#282828;
  line-height:100rpx;
  text-align: center;
  margin: 12rpx 0 46rpx;
}
.actionSheet .otherMsg {
  font-size:26rpx;
  font-weight:300;
  color:#929292;
  line-height:26rpx;
  text-align: center;
}
.actionSheet .otherMsg.not {
  color: #FF7F4D;
}
.actionSheet .otherMsg .more {
  margin-left: 12rpx;
  color: #652791;
  font-weight: normal;
}
.actionSheet .msg {
  width: 590rpx;
  font-size:24rpx;
  font-weight:300;
  color:#BCBCBC;
  line-height:36rpx;
  margin: 62rpx auto 44rpx;
}
.actionSheet .msg .txt {
  color: #8452A7;
  text-decoration: underline;
}
.actionSheet .sureBtn {
  width:610rpx;
  height:88rpx;
  background:#652791;
  border-radius:44rpx;
  font-size:32rpx;
  color:#fff;
  line-height:88rpx;
  margin: 0 auto 52rpx;
}
.actionSheet .sureBtn.not {
  background: #FF7F4D;
}

.actionSheet .h22{
  height:50rpx;
  font-size:42rpx;
  font-weight:700;
  color:rgba(40,40,40,1);
  line-height:50rpx;
  padding-left: 60rpx;
}

.actionSheet .p22{
  height:34rpx;
  font-size:26rpx;
  color:rgba(102,102,110,1);
  line-height:34rpx;
  padding-left: 60rpx;
}

.actionSheet .strong22 {
  display: inline;
  color: #FF7F4C;
}

.welfare-ul {
  padding: 48rpx 60rpx 32rpx 60rpx;
}

.welfare-ul .welfare-item {
  height:140rpx;
  border-radius:16rpx;
  box-sizing: border-box;
  /* padding: 30rpx 38rpx; */
  font-size:28rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  vertical-align: top;
}

.welfare-ul .welfare-item:nth-child(2n){
  margin-left: 9rpx;
  width: calc(50% - 9rpx);
  display: inline-block;
}

.welfare-ul .welfare-item:nth-child(2n-1){
  margin-right: 9rpx;
  width: calc(50% - 9rpx);
  display: inline-block;
}

.welfare-ul .welfare-item:nth-last-child(2){
  margin-bottom: 0;
}

.welfare-ul .welfare-item:nth-last-child(1){
  margin-bottom: 0;
}
.welfare-ul .img-item{
  width: 100%;
  height: 100%;
}
.tips22 {
  font-size:24rpx;
  font-weight:300;
  color:rgba(188,190,192,1);
  line-height:36rpx;
  padding-left: 60rpx;
  padding-right: 60rpx;
}

.tips22 text {
  text-decoration: underline;
  color: #652791;
}
.footer22 {
  height:88rpx;
  border-radius:44rpx;
  margin-top: 114rpx;
  padding: 0 40rpx 92rpx 60rpx;
}

.btn-confirm {
  width:386rpx;
  height:88rpx;
  border-radius:44rpx;
  display: inline-block;
  vertical-align: middle;
  font-size:32rpx;
  font-weight:700;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 88rpx;
}

.enable {
  background:rgba(101,39,145,1);
}

.disable {
  background: #FF7F4C;
}
.view-remian {
  height:88rpx;
  display: inline-block;
  vertical-align: middle;
  width: calc(100% - 386rpx);
}

.view-remian .chat-cost {
  font-size:26rpx;
  color:rgba(40,40,40,1);
  position: relative;
}

.view-remian .monny-remian {
  border-radius:4rpx;
  border:1rpx solid rgba(221,225,224,1);
  font-size:22rpx;
  color:rgba(188,190,192,1);
  margin-top: 8rpx;
  padding: 0 20rpx;
  display: inline-block;
  vertical-align: top;
  box-sizing: border-box;
  height: 32rpx;
  line-height: 29rpx;
}

.view-remian .number22 {
  display: inline-block;
  color:rgba(255,127,76,1);
  font-size:48rpx;
  vertical-align: middle;
  line-height: 1;
}

.view-remian .default {
  display: inline-block;
  font-size:26rpx;
  color:rgba(40,40,40,1);
  vertical-align: bottom;
  line-height: 1;
  position: relative;
  bottom: 7rpx;
  padding-left: 4rpx;
}