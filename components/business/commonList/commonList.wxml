<view class="common-lits-ul personality">
	<view
		class="li"
		wx:for="{{ list }}"
		wx:for-item="item"
		wx:key="{{item.id}}"
		data-item-id="{{item.interviewId}}"
		data-status="{{item.status}}"
		data-jobhunterUid="{{item.jobhunterUid}}"
		data-uid="{{item.uid}}"
		data-recruiterUid="{{item.recruiterUid}}"
		data-positionId="{{item.positionId}}"
		bindtap="routeJump">
			<view class="img-box">
				<image src="{{item.avatar.smallUrl}}"></image>
				<view class="is-certification" wx:if="{{item.certification}}"></view>
			</view>
			<view class="content">
				<view class="header">
					<view class="recruiter-name">{{item.recruiterRealname || item.jobhunterRealname || item.name}}</view>
					<view wx:if="{{identity === 'APPLICANT'}}" class="recruiter-infos">{{item.recruiterPositionName || item.position}}</view>
					<view wx:else class="recruiter-infos">
					  <text wx:if="{{item.workExperience}}">{{item.workExperience}}年</text>
					  <text>{{item.workAgeDesc}}</text>
					  <text wx:if="{{item.educationDesc || item.degreeDesc}}">·{{item.educationDesc || item.degreeDesc}}</text>
					  <text wx:if="{{item.emolumentMin || item.salaryFloor}}">·{{item.emolumentMin || item.salaryFloor}}-{{item.emolumentMax || item.saralyCeil}}K</text>
					</view>
				</view>
				<view class="main" wx:if="{{item.lastCompanyName || item.companyName}}">
				  <view wx:if="{{identity === 'APPLICANT'}}" class="company-name">
				    <i class="icon iconfont icon-gongsi"></i> {{item.companyName}}
				    <text wx:if="{{item.positionNum}}"><i class="icon iconfont icon-zhiwei"></i> {{item.positionNum}}个职位 </text>
				  </view>
					<view wx:else class="company-name"> {{item.lastCompanyName || item.lastCompanyName}}<text wx:if="{{item.lastPosition}}"> |  {{item.lastPosition}} </text></view>
				</view>
			</view>
			<view class="footer {{ showDividingLine ? 'show-dividing-line' : ''}}" wx:if="{{showFooter}}">
				<view class="time">{{item.createdAt || item.viewAt}}</view>
				<view class="action" wx:if="{{identity !== 'APPLICANT' && !item.positionName && isCollect}}">收藏了我</view>
        <view class="action" wx:elif="{{identity !== 'APPLICANT' && item.positionName && isCollect}}">收藏了我的职位<view class="strong">{{item.positionName}}</view></view>
				<view class="action" wx:elif="{{identity === 'APPLICANT' && !item.positionName && !isCollect}}">申请约面</view>
				<view class="action" wx:elif="{{identity === 'APPLICANT' && item.positionName && !isCollect}}">申请约面<view class="strong">{{item.positionName}}</view></view>
				<view class="action" wx:elif="{{item.positionName && identity !== 'APPLICANT' && !isCollect}}">查看了你的职位<view class="strong">{{item.positionName}}</view></view>
				<view class="action" wx:else>查看了你的<view class="strong">个人主页</view></view>
				<view class="status">{{item.statusDesc}}</view>
			</view>
			<view wx:if="{{item.redDot}}">
			  <view class="red-dot-circle" wx:if="{{ dotType === 'circle'}}"></view>
        <view class="red-dot-text" wx:else>新</view>
			</view>
	</view>
</view>