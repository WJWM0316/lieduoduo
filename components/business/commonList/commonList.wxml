<view class="common-lits-ul personality">
	<view
		class="li"
		wx:for="{{ list }}"
		wx:for-item="item"
		wx:key="{{item.id}}"
		data-item-id="{{item.id}}"
		bindtap="routeJump">
			<view class="img-box">
				<view class="is-certification" wx:if="{{item.certification}}"></view>
			</view>
			<view class="content">
				<view class="header">
					<view class="recruiter-name">{{item.recruiterRealname}}</view>
					<view class="recruiter-infos">2年·本科·8-12k</view>
				</view>
				<view class="main">
					<view class="company-name"> {{item.companyName}} | 产品经理 </view>
				</view>
			</view>
			<view class="footer {{ showDividingLine ? 'show-dividing-line' : ''}}" wx:if="{{showFooter}}">
				<view class="time">刚刚</view>
				<view class="action">查看了你的职位<view class="strong">{{item.positionName}}</view></view>
				<view class="status">{{item.statusDesc}}</view>
			</view>
			<view class="red-dot-circle" wx:if="{{ dotType === 'circle'}}"></view>
			<view class="red-dot-text" wx:else>新</view>
	</view>
</view>