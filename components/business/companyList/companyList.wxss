@import '../../../iconfont.wxss';

.default-list-ul {
	overflow: hidden;
}

.default-list-ul .li {
	overflow: hidden;
	position: relative;
	background:rgba(255,255,255,1);
	box-shadow:0px 8rpx 20rpx 0rpx rgba(34,56,101,0.08);
	border-radius:8rpx;
	padding: 30rpx 40rpx;
	margin-bottom: 18rpx;
}

.default-list-ul .li:last-child {
	margin-bottom: 0;
}

.default-list-ul .li .img-box {
	width: 120rpx;
	height: 120rpx;
	background: rgba(0,0,0,.1);
	border-radius: 50%;
	display: inline-block;
	vertical-align: middle;
	box-shadow:0px 2rpx 12rpx 0rpx rgba(0,0,0,0.23);
	border:2rpx solid rgba(232,233,235,1);
	box-sizing: border-box;
	position: relative;
}

.default-list-ul .li .is-certification {
	width:36rpx;
	height:36rpx;
	background:rgba(255,127,76,1);
	border:2rpx solid rgba(255,255,255,1);
	box-sizing: border-box;
	border-radius: 50%;
	position: absolute;
	bottom: 0;
	right: 0;
}

.default-list-ul .li .content {
	display: inline-block;
	width: calc(100% - 120rpx - 30rpx);
	height: 120rpx;
	margin-left: 30rpx;
	vertical-align: middle;
}

.default-list-ul .li .header {
	overflow: hidden;
	margin-top: 15rpx;
}

.default-list-ul .li .recruiter-name {
	font-size:36rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	line-height:36rpx;
	display: inline-block;
}

.default-list-ul .li .recruiter-position {
	font-size:28rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	line-height:28rpx;
	display: inline-block;
	border-left: 1px solid #979797;
	margin-left: 15px;
	padding-left: 15px;
}

.default-list-ul .li .company-name {
	font-size:24rpx;
	font-weight:300;
	color:rgba(146,146,146,1);
	line-height:24rpx;
	display: inline-block;
}

.default-list-ul .li .position-number {
	font-size:24rpx;
	font-weight:300;
	color:rgba(146,146,146,1);
	line-height:24rpx;
	display: inline-block;
	margin-left: 40rpx;
}

.default-list-ul .li .number-strong {
	color: #2878FF;
	display: inline-block;
}