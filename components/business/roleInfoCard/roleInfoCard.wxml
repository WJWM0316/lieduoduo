<view class="my-class">
  <view class="company" wx:if="{{roleType === 'company'}}" bindtap="jumpCompany">
    <image class="img" src="{{cardData.avatar.middleUrl}}"></image>
    <view class="companyMsg">
      <view class="name">{{cardData.name}}</view>
      <view class="detail">{{cardData.industry}} · {{cardData.financingDesc}} · {{cardData.employeesDesc}}</view>
    </view>
    <icon class="icon iconfont icon-xiangyou"></icon>
  </view>
  <block  wx:if="{{roleType === 'applicant'}}">
    <view class="applicant" bindtap="jumpApplicant">
      <image class="img" src="{{cardData.avatar.middleUrl}}"></image>
      <view class="applicantMsg">
        <view class="name">{{cardData.jobhunterRealname}}<text class="msg">{{cardData.workAge}}·{{cardData.degreeDesc}}·{{cardData.emolument}}</text></view>
        <view class="detail">{{cardData.companyName}} | {{cardData.positionName}}</view>
      </view>
    </view>
    <view class="contact">
      <view class="mobile" bindtap="makePhoneCall">手机：<text class="txt">{{cardData.mobile || cardData.jobhunterMobile}}</text></view>
      <view class="wechat" bindtap="setClipboardData" wx:if="{{cardData.wechat}}">微信：<text class="txt">{{cardData.wechat}}</text></view>
    </view>
  </block>
  <view class="recruiter" wx:if="{{roleType === 'recruiter'}}" bindtap="jumpRecruiter">
    <image class="img" src="{{cardData.avatar.middleUrl}}"></image>
    <view class="vip">V</view>
    <view class="recruiterMsg">
      <view class="name">{{cardData.name}}<text class="msg" wx:if="{{!isMain}}"> · {{cardData.position}}</text></view>
      <view class="detail">{{cardData.companyName}}<text wx:if="{{isMain}}"> | {{cardData.position}}</text></view>
    </view>
    <view class="status" wx:if="{{!isMain}}">邀你面试</view>
  </view>
</view>