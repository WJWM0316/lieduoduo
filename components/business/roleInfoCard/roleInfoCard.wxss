@import '../../../iconfont.wxss';
.company {
  position: relative;
  padding-left: 134rpx;
  padding-right: 50rpx;
  background: #fff;
}
.company .img {
  width: 108rpx;
  height: 108rpx;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 24rpx;
}
.company .companyMsg, .applicant .applicantMsg, .recruiter .recruiterMsg {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 108rpx;
}
.applicant .applicantMsg, .recruiter .recruiterMsg {
  height: 120rpx;
}
.companyMsg .name, .applicantMsg .name, .recruiterMsg .name {
  font-size: 36rpx;
  font-weight: 500;
  color: #282828;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.applicantMsg .name .msg {
  font-size: 26rpx;
  font-weight: 300;
  color: #929292;
  margin-left: 30rpx;
}
.recruiterMsg .name .msg {
  font-size: 28rpx;
  font-weight: 400;
  color: #282828;
}
.companyMsg .detail, .applicantMsg .detail, .recruiterMsg .detail {
  margin-top: 14rpx;
  font-size: 26rpx;
  font-weight: 300;
  color: #5C565D;
  line-height: 26rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.company .icon {
  font-size: 32rpx;
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #D3CFD6;
}
.applicant, .recruiter{
  position: relative;
  padding-top: 30rpx;
  padding-left: 172rpx;
  padding-right: 28rpx;
  background: #fff;
}
.recruiter {
  padding-top: 22rpx;
  padding-bottom: 22rpx;
  padding-right: 176rpx;
}
.applicant .img, .recruiter .img {
  width: 120rpx;
  height: 120rpx;
  display: block;
  border-radius: 50%;
  position: absolute;
  top: 30rpx;
  left: 28rpx;
}
.vip {
  width: 36rpx;
  height: 36rpx;
  background: #FFDC29;
  border: 2rpx solid #fff;
  box-sizing: border-box;
  color: #652791;
  line-height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: 700;
  position: absolute;
  top: 112rpx;
  left: 110rpx;
  border-radius: 50%;
}
.recruiter .status {
  font-size: 26rpx;
  font-weight: 400;
  color: #929292;
  position: absolute;
  top: 50%;
  right: 28rpx;
  transform: translateY(-50%);
}
.contact {
  padding: 0 28rpx;
  line-height: 72rpx;
  display: flex;
  margin-top: 22rpx;
}
.mobile, .wechat {
  flex: 1;
  font-size: 28rpx;
  font-weight: 400;
  color: #626262;
  border-top: 1rpx dashed #BACED8;
}
.mobile .txt, .wechat .txt {
  font-weight: 700;
  color: #652791;
}