
@import '../../../iconfont.wxss'
.ul{
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx 20rpx;
}
.li{
  padding: 40rpx 40rpx 30rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #FFF;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
    box-shadow:0rpx 0rpx 40rpx 0rpx rgba(22,39,77,0.1);

}
.li .name{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight:600;
  color: #354048;
}
.li .name .title {
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(40,40,40,1);
  line-height:32rpx;
}
.li .name .salary{
  color: #FF7F4C;
  font-weight:bold;
  font-size:32rpx;
  line-height:32rpx;
}
.li .company{
  font-size: 26rpx;
  color: #5C565D;
  font-weight:400;
  line-height:26rpx;
  margin-top: 16rpx;
}
.li .labelList{
  display: flex;
  margin-top: 16rpx;
}
.li .labelList .label{
  line-height: 24rpx;
  padding: 10rpx 12rpx;
  font-size: 24rpx;
  font-weight: 400;
  background-color: #F8F8F8;
  color: #929292;
  border-radius: 4rpx;
  margin-right: 16rpx;
}
.hr{
  display: flex;
  margin-top: 15rpx;
  align-items: center;
  justify-content: space-between;
  height: 66rpx;
}
.hr .hrImg{
  width: 52rpx;
  height: 52rpx;
  background-color: #ccc;
  border-radius: 50%;
  margin-right: 16rpx;
  overflow: hidden;
}
.hr .hrImg image{
  width: 100%;
  height: 100%;
  display: block;
}
.hr .conLeft {
  height: 66rpx;
  display: flex;
  padding-top: 13rpx;
  box-sizing: border-box;
}
.hr .logo {
  width: 66rpx;
  height: 66rpx;
  display: block;
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(45,45,45,0.06);
  border-radius:6rpx;
  border:1rpx solid rgba(251,251,255,1);
}
.hr .hrName{
  font-size: 24rpx;
  font-weight: 400;
  color: #626262;
  align-items: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 52rpx;
}
.formIdBtn {
  position:relative;
  display:block;
  background: none;
  padding: 0;
  text-align: left;
  overflow:inherit;
}
.formIdBtn::after {
  display: none;
}