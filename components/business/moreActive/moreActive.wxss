.moreActive{
  width: 100%;
  height: 144rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.left{
  width: 398rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.left .title{
  margin-bottom: 14rpx;
  font-size: 32rpx;
  color:#282828;
  font-weight: 500;
}

.left .info{
  font-size: 24rpx;
  color: #929292;
  font-weight: 300;
}

.right{
  overflow: hidden;
}

.right .avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  background-color: #666666;
}
.right .avatar:first-child{
  margin-left: 0;
  background-color: red;
}
.right .avatar:last-child{
  background-color: green;
}