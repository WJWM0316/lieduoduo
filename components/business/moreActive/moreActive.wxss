.moreActive{
  width: 100%;
  height: 144rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #E8E9EB;
}

.left{
  position: relative;
  width: 398rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.left::before{
  display: block;
  content: '';
  width: 2rpx;
  height: 68rpx;
  position: absolute;
  top: 10rpx;
  left: -40rpx;
  background-color: #2878FF;
}
.left .dot{
  width: 14rpx;
  height: 14rpx;
  display: inline-block;
  background-color: #FF7F4C;
  border-radius: 50%;
  margin-left: 12rpx;
}

.left .title{
  margin-bottom: 14rpx;
  font-size: 32rpx;
  color:#282828;
  font-weight: 500;
}

.left .info{
  font-size: 24rpx;
  color: #929292;
  font-weight: 300;
}

.right{
  overflow: hidden;
}

.right .avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: -10rpx;
}
.right .avatar:first-child{
  margin-left: 0;
}
