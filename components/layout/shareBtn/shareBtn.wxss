@import '../../../iconfont.wxss'
.shareBtn {
  width:64rpx;
  height:146rpx;
  background:#fff;
  border-radius:30rpx 0rpx 0rpx 30rpx;
  border:3rpx solid rgba(40,40,40,1);
  position:fixed;
  top: 208rpx;
  right: 0;
  z-index: 9;
  padding: 0;
  text-align: center;
  font-size: 28rpx;
  color: #626262;
}
.shareBtn::after {
  display: block;
}
.shareIcon {
  width: 100%;
  height: 100%;
}
.shareBox {
  position: fixed;
  width: 100%;
  height: 100vh;
  left: 0;
  bottom: 0;
  z-index: 11;
  background: rgba(0,0,0,0.5);
}
.choseBox {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 12;
  line-height: 40rpx;
}
.choseBox button {
  border-radius: 0;
}