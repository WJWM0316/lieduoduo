@import "../../../iconfont.wxss";
.shareBtn {
  width: 76rpx;
  height: 68rpx;
  background: #fff;
  box-shadow: 0rpx 4rpx 14rpx 0rpx rgba(101,39,145,0.18);
  border-radius: 36rpx 0rpx 0rpx 36rpx;
  position:fixed;
  top: 208rpx;
  right: 0;
  z-index: 2;
  padding: 0;
  text-align: left;
}
.shareBtn::after {
  display: block;
}
.shareIcon {
  width: 100%;
  height: 100%;
  line-height: 68rpx;
  margin: 0 20rpx 0 29rpx;
  font-size: 27rpx;
  color: #626262;
}
.shareBox {
  position: fixed;
  width: 100%;
  height: 100vh;
  left: 0;
  bottom: 0;
  z-index: 11;
  background: rgba(0,0,0,0.5);
}
.choseBox {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 12;
  line-height: 40rpx;
}
.choseBox button {
  border-radius: 0;
}