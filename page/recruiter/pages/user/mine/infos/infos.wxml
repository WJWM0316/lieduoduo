<navbar title="" background="transparent" title="我的" color="#fff"></navbar>
<view class="top-banner">
	<image class="bgImg" mode="aspectFill" src="{{cdnPath}}recruiter_mine_bg.png"></image>
</view>

<view class="page-mine">
	<form bindsubmit="formSubmit" report-submit='{{true}}'>
		<view class="floating-box">
			<view class="header">
				<view class="content">
					<view class="realname">{{recruiterInfo.name}}</view>
					<view class="degree-name">{{recruiterInfo.companyShortname}} | {{recruiterInfo.position}}</view>
					<button form-type="submit" class="edit clear-style" bindtap="jumpUpdateInfos"><i class="icon iconfont icon-bianji"></i> 编辑资料</button>
				</view>
				<view class="img-box">
					<image class="img-box" src="{{recruiterInfo.avatar.middleUrl}}" bindtap="preview"></image>
					<!-- <i class="certification-icon">V</i> -->
				</view>
			</view>
			<button form-type="submit" open-type="share" class="share-homepage clear-style">分享我的主页</button>
			<button form-type="submit" class="share-homepage-pic clear-style" bindtap="routeJump" data-route="poster">生成朋友圈分享图</button>
		</view>
		<view class="show-off-block">
			<view class="content">
				<view class="first">
					<view class="strong">{{recruiterInfo.wantInterview}}</view>人想和我约面
				</view>
				<view class="second">
					主页 <view class="strong">{{recruiterInfo.viewedCount}}</view> 次预览 已有 <view class="strong">{{recruiterInfo.influence}}</view>  人支持
				</view>
			</view>
			<!-- <view class="btn-box">
				<view class="btn">炫耀一下</view>
			</view> -->
		</view>
	</form>
	<view class="entry-list">
