.userInfoEdit {
	background: #fff;
}
.title {
	padding: 0 40rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #FAFBFC;
  font-size: 32rpx;
  font-weight: 400;
  color: #353943;
}
.pic image {
	width: 162rpx;
	height: 162rpx;
	display: block;
}
.addPic {
	width: 162rpx;
	height: 162rpx;
	line-height: 162rpx;
	text-align: center;
	border-radius: 2rpx;
	border: 1rpx solid #E8E9EB;
	box-sizing: border-box;
	margin-left: 8rpx;
}
.item {
	padding: 0 40rpx;
  height: 123rpx;
  border-bottom: 1rpx solid rgba(53,57,67,0.1);
  display: flex;
  align-items: center;
}
.item.picBox {
	height: auto;
	padding: 32rpx 40rpx;
}
.picList .pic {
	margin-right: 8rpx;
}
.picList .pic:last-child {
	margin-right: 0;
}
.txt {
  width: 40%;
  font-size: 28rpx;
  font-weight: 300;
  color: #353943;
  padding-left: 32rpx;
  position: relative;
  box-sizing: border-box;
}
.txt:after {
  content: '*';
  position: absolute;
  top: 50%;
  left: 10rpx;
  transform: translateY(-30%);
  color: #FF3636;
}
.noRed:after {
  display: none;
}
.edit {
  font-size: 28rpx;
  font-weight: 500;
  color: #353943;
  width: 60%;
  text-align: right;
}
.edit input, .radio-group {
  font-weight: 500;
  color: #353943;
}
.radio {
  margin-left: 50rpx;
}
.editLabel {
  margin: 30rpx auto 0;
  width: 294rpx;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  border: 1rpx solid #2878FF;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 34rpx;
  color: #2878FF;
}
.signBox {
  padding: 32rpx 10rpx 78rpx;
  font-size: 28rpx;
}
.sign {
  width: 100%;
  height: 70rpx;
  line-height: 38rpx;
  font-weight: 500;
  color: #353943;
}
.number {
  text-align: right;
  font-size: 28rpx;
  font-weight: 300;
  color: #B2B6C2;
}
.save {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #2878FF;
  color: #fff;
  font-size: 32rpx;
  font-weight: 400;
  margin: 31rpx 0;
  border-radius: 50rpx;
}

