<view class="userInfoEdit">
  <navBar title="编辑个人信息"></navBar>
  <view class="title">头像</view>
  <view class="item picBox">
  	<view class="picList">
  		<view class="pic">
	  		<image src="../../../../../images/choseIcon2.png"></image>
	  	</view>
  	</view>
  	<unloadFile>
    	<view class="pic addPic">+</view>
    </unloadFile>
  </view>
  <view class="title">基本信息</view>
  <view class="item">
    <view class="txt">姓名</view>
    <view class="edit">
      <input type="text" value="{{userName}}" data-type="name" bindblur="getInputValue" placeholder="请输入姓名" placeholder-style="color: #B2B6C2"/>
    </view>
  </view>
  <view class="item">
    <view class="txt">性别</view>
    <view class="edit">
      <radio-group class="radio-group" bindchange="radioChange">
        <label class="radio">
          <radio value="1" color="#2878FF" checked="{{gender === 1}}"/>
          男
        </label>
        <label class="radio">
          <radio value="2" color="#2878FF" checked="{{gender === 2}}"/>
          女
        </label>
      </radio-group>
    </view>
  </view>
  <view class="title">个性签名</view>
  <view class="signBox">
    <textarea class="sign" value="{{signature}}" maxlength='25' placeholder="用一句话介绍你自己吧~" bindinput="singInput" placeholder-style="color: #B2B6C2; font-weight: 300"></textarea>
    <view class="number">{{signNum}}/25</view>
  </view>
  <button class="save" bindtap="saveInfo">保存资料</button>
</view>