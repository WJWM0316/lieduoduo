@import '../../../../../../iconfont.wxss';
.company-upload{
  padding-bottom: 148rpx;
  background-color: #fff;
}

.company-upload .warning {
	height:80rpx;
	background:rgba(255,252,240,1);
	line-height: 80rpx;
	font-size:28rpx;
	font-weight:300;
	color:rgba(255,127,77,1);
	padding: 0 40rpx;
}

.company-upload .upload-li {
	padding: 56rpx 40rpx 0 40rpx;
	background: white;
	margin-bottom: 24rpx;
	overflow: hidden;
}

.company-upload .upload-li .h1{
	font-size:36rpx;
	font-weight:bold;
	color:rgba(40,40,40,1);
	line-height: 1;
	margin-bottom: 15rpx;
}

.company-upload .upload-li .p{
	font-size:26rpx;
	font-weight:400;
	color:rgba(146,146,146,1);
	line-height: 1.8
}

.company-upload .upload-box {
	height:380rpx;
	background:#FAFCFF;
	border-radius:10rpx;
	border:2rpx dotted #CED7DC;
	margin: 32rpx auto;
	font-size:28rpx;
	font-weight:400;
	color:rgba(188,188,188,1);
	text-align: center;
	position: relative;
	overflow: hidden;
}

.company-upload image {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}

.company-upload .replace-image {
	position: absolute;
	right: 30rpx;
	bottom: 24rpx;
	font-size:28rpx;
	font-weight:400;
	color:rgba(255,255,255,1);
}

.company-upload .icon-box {
	width:92rpx;
	height:92rpx;
	background:white;
	border: 8rpx solid rgba(232,233,235,1);
	box-sizing: border-box;
	border-radius: 50%;
	display: inline-block;
	font-weight: 700;
	font-size: 55rpx;
	color: rgba(232,233,235,1);
	margin: 124rpx auto 10rpx auto;
}

.button-submit {
  background:#F5F4F7;
  border-radius:48rpx;
  border: 1px solid #F5F4F7;
  font-size:32rpx;
  font-weight:400;
  color:#CDCBCF;
  text-align: center;
  line-height: 88rpx;
  height:88rpx;
  margin: 30rpx 100rpx;
}

