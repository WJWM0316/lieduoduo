.button-enable {
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	border-radius:48rpx;
	color:rgba(255,255,255,1);
}

.company-upload .icon-zhongxinshangchuan {
	font-size: 30rpx;
	margin-right: 10rpx;
}

.company-upload .icon-tixing {
	font-size: 30rpx;
	margin-right: 10rpx;
}
.btn-area{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
