@import '../../../../../../iconfont.wxss';

.company-post .entry-list {
	box-sizing: border-box;
	width: 100%;
	display: block;
	margin-top: 24rpx;
}

.company-post .warning {
	height:80rpx;
	background:rgba(255,252,240,1);
	line-height: 80rpx;
	font-size:28rpx;
	font-weight:300;
	color:rgba(255,127,77,1);
	padding: 0 40rpx;
}

.company-post .entry-list .li {
	background: white;
	line-height: 122rpx;
	overflow: hidden;
	font-size:28rpx;
	font-weight:400;
	position: relative;
	padding: 0 40rpx;
}

.company-post .entry-list .companyShortName {
	display: inline-block;
	height: 122rpx;
	border: unset;
	float: right;
	text-align: right;
}

.company-post .entry-list .li:after {
	content: '';
	display: block;
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	bottom: 0;
	height: 1px;
	background: #E8E9EB;
}

.company-post .entry-list .clear-bottom:after {
	display: none;
}

.company-post .entry-list .label-icon {
	margin-right: 24rpx;
	color: #CED7DC;
}

.company-post .entry-list .key {
	display: inline-block;
	font-size:28rpx;
	font-weight:300;
	color:rgba(53,57,67,1);
}

.company-post .entry-list .text2 {
	display: inline-block;
	float: right;
	font-size:28rpx;
	font-weight:400;
	color:rgba(188,188,188,1);
}

.company-post .entry-list .not-certified {
	display: inline-block;
	color: #2878FF;
}

.company-post .entry-list .has-certified {
	display: inline-block;
	color: #BCBCBC;
}

.company-post .entry-list .under-certified {
	display: inline-block;
	color: #F5A623;
}

.company-post .copy-right {
	font-size:26rpx;
	font-weight:400;
	color:#929292;
	line-height:1;
	margin: 50rpx;
	text-align: center;
	margin-bottom: 148rpx;
}

.company-post .copy-right view {
	display: inline-block;
	border-right: 1px solid #E8E9EB;
	margin-right: 24rpx;
	padding-right: 24rpx;
}

.company-post .copy-right view:last-child {
	border-right: unset;
}

.company-post .entry-list .icon-xiangyou {
  float: right;
  color: #CED7DC;
}

.company-post .entry-list .btn-area {
	margin-top: 24rpx;
}

.company-post .entry-list .exemple {
	font-size:24rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	line-height:38rpx;
	padding: 0 40rpx;
	margin: 24rpx 0;
}

.company-post .entry-list picker {
	position: absolute;
	right: 20rpx;
	left: 20rpx;
	top: 0;
	bottom: 0;
	overflow: hidden;
}

.company-post .entry-list picker .text2{
	width: 100%;
	height: 100%;
	text-align: right;
	box-sizing: border-box;
	padding-right: 5rpx;
}

.company-post .entry-list .link .text2{
	margin-right: 5rpx;
}

.button-submit {
	background:#F5F4F7;
	border-radius:48rpx;
	border: 1px solid #F5F4F7;
	font-size:32rpx;
	font-weight:400;
	color:#CDCBCF;
	text-align: center;
	line-height: 88rpx;
	height:88rpx;
	margin: 224rpx 100rpx;
}

.button-enable {
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	color:rgba(255,255,255,1);
}

.picker-box {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	overflow: hidden;
	text-align:right;
	margin-right:35rpx;
	opacity: 0;
}

.company-post .icon-tixing {
	font-size: 30rpx;
	margin-right: 10rpx;
}