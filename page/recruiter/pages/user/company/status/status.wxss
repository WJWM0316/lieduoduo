.company-identity-status .header .line-box {
	font-size:28rpx;
	font-weight:500;
	color:rgba(101,39,145,1);
	line-height: 1;
	position: relative;
}

.company-identity-status .header .line-left {
	position: absolute;
	left: 0;
	width: calc(50% - 112rpx);
	top: 50%;
	height: 1px;
	background: #652791;
}

.company-identity-status .header .line-left::before {
	content: '';
	display: block;
	width: 15rpx;
	height: 15rpx;
	background: #652791;
	transform: rotate(45deg) translateY(-50%);
	position: absolute;
	right: 0;
	top: 45%;
}

.company-identity-status .header .line-right {
	position: absolute;
	right: 0;
	width: calc(50% - 112rpx);
	top: 50%;
	height: 1px;
	background: #652791;
}

.company-identity-status .header .line-right::before {
	content: '';
	display: block;
	width: 15rpx;
	height: 15rpx;
	background: #652791;
	transform: rotate(45deg) translateY(-50%);
	position: absolute;
	left: -15rpx;
	top: 45%;
}

.company-identity-status .header .button-box {
	overflow: hidden;
	text-align: center;
	margin-top: 40rpx;
}

.company-identity-status .header .button-image {
	width: 86rpx;
	height: 84rpx;
	display: block;
	margin: 20rpx auto;
}

.company-identity-status .header .button {
	display: inline-block;
	font-size:26rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
	margin: 0 53rpx;
}

.company-identity-status .section{
	margin: 24rpx 30rpx;
	background:rgba(255,255,255,1);
	box-shadow:0rpx 10rpx 30rpx 0rpx rgba(22,39,77,0.05);
	border-radius:10rpx;
	padding: 32rpx 30rpx 16rpx 30rpx;
	overflow: hidden;
}

.company-identity-status .title .label{
	font-size:32rpx;
