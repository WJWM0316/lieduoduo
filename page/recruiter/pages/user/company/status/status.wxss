}

.company-identity-status .title .jump{
	font-size:26rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
	float: right;
}

.company-identity-status .title {
	line-height: 1;
	position: relative;
}

.company-identity-status .title:before {
	content: '';
	display: block;
	position: absolute;
	left: -30rpx;
	height: 40rpx;
	width: 8rpx;
	background: red;
	width:8rpx;
	height:40rpx;
	background:rgba(255,220,41,1);
	border-radius:0rpx 100rpx 100rpx 0rpx;
