@import '../../../../../../iconfont.wxss';

.company-identity-status .header{
	background:rgba(255,255,255,1);
	overflow: hidden;
	text-align: center;
	padding: 56rpx 30rpx 48rpx 30rpx;
}

.company-identity-status .header .default-status {
	width: 180rpx;
	height: 135rpx;
	margin-bottom: 25rpx;
}

.company-identity-status .reation {
	background:rgba(255,252,240,1);
	border-radius:10rpx;
	box-sizing: border-box;
	padding: 20rpx 30rpx;
	line-height: 2;
	font-size:26rpx;
	font-weight:400;
	color:rgba(255,127,77,1);
	text-align: left;
}

.company-identity-status .header .h2{
	font-size:28rpx;
	font-weight:bold;
	color:rgba(40,40,40,1);
	margin-bottom: 24rpx;
}

.company-identity-status .header .h1{
	font-size:40rpx;
	font-weight:bold;
	color:rgba(101,39,145,1);
	line-height: 1;
	text-align: center;
	margin-bottom: 32rpx;
}

.company-identity-status .header .h3{
	font-size:40rpx;
	font-weight:bold;
	color:rgba(101,39,145,1);
	line-height: 1;
	text-align: center;
	margin-bottom: 16rpx;
}

.company-identity-status .header .p{
	font-size:26rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
	text-align: center;
}

.company-identity-status .header .p2{
	font-size:26rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
	text-align: center;
	margin-bottom: 56rpx;
}

.company-identity-status .header .p3{
	font-size:26rpx;
	font-weight:600;
	color:rgba(40,40,40,1);
	margin-bottom: 15rpx;
}

.company-identity-status .header .p4{
	font-size:26rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
	margin-bottom: 45rpx;
}

.company-identity-status .header .line-box {
	font-size:28rpx;
	font-weight:500;
	color:rgba(101,39,145,1);
	line-height: 1;
	position: relative;
}

.company-identity-status .header .line-left {
	position: absolute;
	left: 0;
	width: calc(50% - 112rpx);
	top: 50%;
	height: 1px;
	background: #652791;
}

.company-identity-status .header .line-left::before {
	content: '';
	display: block;
	width: 15rpx;
	height: 15rpx;
	background: #652791;
	transform: rotate(45deg) translateY(-50%);
	position: absolute;
	right: 0;
	top: 45%;
}

.company-identity-status .header .line-right {
	position: absolute;
	right: 0;
	width: calc(50% - 112rpx);
	top: 50%;
	height: 1px;
	background: #652791;
}

.company-identity-status .header .line-right::before {
	content: '';
	display: block;
	width: 15rpx;
	height: 15rpx;
	background: #652791;
	transform: rotate(45deg) translateY(-50%);
	position: absolute;
	left: 0;
	top: 45%;
}

.company-identity-status .header .button-box {
	overflow: hidden;
	text-align: center;
	margin-top: 40rpx;
}

.company-identity-status .header .button-image {
	width: 86rpx;
	height: 84rpx;
	display: block;
	margin: 20rpx auto;
}

.company-identity-status .header .button {
	display: inline-block;
	font-size:26rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
	margin: 0 53rpx;
}

.company-identity-status .section{
	margin: 24rpx 30rpx;
	background:rgba(255,255,255,1);
	box-shadow:0rpx 10rpx 30rpx 0rpx rgba(22,39,77,0.05);
	border-radius:10rpx;
	padding: 32rpx 30rpx;
	overflow: hidden;
}

.company-identity-status .title .label{
	font-size:32rpx;
	font-weight:bold;
	color:rgba(11,9,26,1);
	float: left;
}

.company-identity-status .title .jump{
	font-size:26rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
	float: right;
}

.company-identity-status .title {
	line-height: 1;
	position: relative;
}

.company-identity-status .title:before {
	content: '';
	display: block;
	position: absolute;
	left: -30rpx;
	height: 40rpx;
	width: 8rpx;
	background: red;
	width:8rpx;
	height:40rpx;
	background:rgba(255,220,41,1);
	border-radius:0rpx 100rpx 100rpx 0rpx;
	top: -4rpx;
}

.company-identity-status .key {
	font-size:26rpx;
	font-weight:300;
	color:rgba(98,98,98,1);
}

.company-identity-status .value {
	font-size:26rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	flex: 1;
	text-align: right;
}

.company-identity-status .li {
	display: flex;
	line-height: 1;
	margin: 33rpx 0;
}

.company-identity-status .ul {
	overflow: hidden;
	width: 100%;
}

.company-identity-status .div {
	margin: 24rpx 30rpx;
	overflow: hidden;
}

.company-identity-status .div .item{
	height:120rpx;
	background:rgba(255,255,255,1);
	box-shadow:0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
	border-radius:10rpx;
	margin: 24rpx;
	line-height: 120rpx;
	box-sizing: border-box;
	padding: 0 30rpx;
	font-size:28rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
}

.company-identity-status .label-icon {
	color:#652791;
}

.company-identity-status .icon-xiangyou {
	float: right;
	color: #CED7DC;
}

.company-identity-status .tab-box {
	display: table;
	margin: 50rpx auto;
}

.company-identity-status .tab-box .item {
	font-size:28rpx;
	font-weight:500;
	color:rgba(188,188,188,1);
	display: inline-block;
	margin-right: 25rpx;
	line-height: 1;
}

.company-identity-status .tab-box .column-line {
	border-right: 1px solid #DCDCDC;
	padding-right: 25rpx;
}