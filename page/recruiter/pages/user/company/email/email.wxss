.button-enable {
	background: green;
}

.button-submit {
	background: green;
	height:88rpx;
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	border-radius:48rpx;
	margin: 100rpx;
	font-size:32rpx;
	font-weight:400;
	color:rgba(255,255,255,1);
}

.company-email form {
	display: block;
	width: 100%;
}

.company-email .h1 {
	font-size:36rpx;
	font-weight:bold;
	color:rgba(40,40,40,1);
	padding: 0 40rpx 16rpx 40rpx;
	line-height: 1;
	background: white;
}

.company-email .p {
	font-size:26rpx;
	font-weight:400;
	color:rgba(146,146,146,1);
	padding: 0 40rpx 0rpx 40rpx;
	background: white;
}

.company-email .value {
	height:122rpx;
	background:rgba(255,255,255,1);
	line-height: 122rpx;
	font-size:32rpx;
	font-weight:500;
	color:rgba(188,188,188,1);
	box-sizing: border-box;
	padding: 0 40rpx;
}

.company-email .input-li {
	height:122rpx;
	background:rgba(255,255,255,1);
	line-height: 122rpx;
	font-size:32rpx;
	font-weight:500;
	color:rgba(188,188,188,1);
	box-sizing: border-box;
	position: relative;
	background: white;
}

.company-email .input-li:after {
	content: '';
	display: block;
	left: 40rpx;
	right: 40rpx;
	bottom: 0;
	height: 1px;
	position: absolute;
	background: #E8E9EB;
}

.company-email .example {
	height:76rpx;
	background:rgba(255,255,255,1);
	line-height: 76rpx;
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	padding: 0 40rpx;
	background: white;
}

.company-email .content{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 56rpx;
  background: white;
  overflow: hidden;
}
.company-email .iptbox{
  width: 80rpx;
  height: 80rpx;
  border-bottom:1rpx solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.company-email .ipt{
  width: 0;
  height: 0;
}

.company-email .example1 {
	background:rgba(255,255,255,1);
	line-height: 76rpx;
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	background: white;
	/*transform: translateY(-50rpx);*/
	padding: 0 40rpx;
}

.company-email .example1 text{
	color: #652791;
}