.createdCompanyInfos .header {
	display: flex;
	padding: 52rpx 40rpx;
	position: relative;
	background: white;
	justify-content: center;
  align-items: center;
}

.createdCompanyInfos .header:before {
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	bottom: 0;
	height: 1rpx;
	background: #CDCBCF;
	content: '';
	display: block;
}

.createdCompanyInfos .header .icon-box {
	width: 68rpx;
	height: 68rpx;
	overflow: hidden;
	text-align: center;
	line-height: 68rpx;
	color: #652791;
}

.createdCompanyInfos .header .iconfont {
	font-size: 68rpx;
}


.createdCompanyInfos .header .content {
	flex: 1;
	margin-left: 40rpx;
}

.createdCompanyInfos .header image{
	width: 100%;
	height: 100%;
}

.createdCompanyInfos .h1{
	height:40rpx;
	font-size:40rpx;
	font-weight:500;
	color:rgba(101,39,145,1);
	line-height:40rpx;
	margin-bottom: 16rpx;
}

.createdCompanyInfos .h2{
	height:26rpx;
	font-size:26rpx;
	font-weight:400;
	color:rgba(92,86,93,1);
	line-height:26rpx;
}

.createdCompanyInfos .div{
	padding: 0 40rpx;
	background: white;
}

.createdCompanyInfos .div .p{
	height:26rpx;
	font-size:25rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
	line-height:26rpx;
	padding-top: 47rpx;
	padding-bottom: 30rpx;
}

.createdCompanyInfos .ul .li{
	display: flex;
	justify-content: center;
  align-items: center;
  padding-bottom: 32rpx;
}

.createdCompanyInfos .li .icon-box{
	width:78rpx;
	height:78rpx;
	background:rgba(245,244,247,1);
	border-radius: 50%;
	text-align: center;
	line-height: 78rpx;
	color: #652791;
}

.createdCompanyInfos .ul .content{
	height:28rpx;
	font-size:28rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
	line-height:28rpx;
	margin-left: 32rpx;
	flex: 1;
}

.footer {
	position: fixed;
	bottom: 50rpx;
	left: 0;
	right: 0;
}

.footer .p2{
	font-size:28rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
	line-height:1.1;
	text-align: center;
}

.footer .p2 .iconfont{
	display: inline-block;
	vertical-align: text-bottom;
	font-size: 28rpx;
}

.footer .enter {
	width: 100%;
	margin-top: 45rpx;
	text-align: center;
	font-size:28rpx;
	font-weight:500;
	color:#BCBCBC;
	line-height:28rpx;
}