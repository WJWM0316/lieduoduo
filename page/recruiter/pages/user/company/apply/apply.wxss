.button-submit {
	margin: 270rpx 100rpx 0;
	height:88rpx;
	background:#F5F4F7;
	border-radius:48rpx;
	border: 1px solid #F5F4F7;
	font-size:32rpx;
	font-weight:400;
	color:#CDCBCF;
	text-align: center;
	line-height: 88rpx;
}

.button-enable {
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	color:rgba(255,255,255,1);
	margin: 270rpx 100rpx 0;
}

.company-apply-page .banner {
	background: rgba(0,0,0,0.1);
	position:fixed;
	top: 0;
	left: 0;
}

.company-apply-page .banner image {
	width: 100vw;
	height: 495rpx;
	display: block;
}

.company-apply-page .input-li {
	height:122rpx;
	line-height: 122rpx;
	padding: 0 40rpx;
	position: relative;
	background: white;
}

.company-apply-page .input-li:after {
	content: '';
	display: block;
	position: absolute;
	left: 40rpx;
	right: 20px;
	bottom: 0;
	height: 1px;
	background: #E8E9EB;
}

.company-apply-page .clear-bottom:after {
	display: none;
}

.company-apply-page .input-li .key {
	font-size:28rpx;
	font-weight:300;
	color:#353943;
	width: 130rpx;
	float: left;
}

.company-apply-page .input-li .value {
	height: 100%;
	font-size:28rpx;
	font-weight:500;
	color:rgba(98,98,98,1);
	text-align: right;
	width: calc(100% - 130rpx);
	position: relative;
	float: left;
}

.company-apply-page .input-li input {
	width: 100%;
	overflow: hidden;
	display: inline-block;
	height: 122rpx;
	line-height: 122rpx;
}

.company-apply-page .ul {
	display: table;
	margin: 50rpx auto;
}

.company-apply-page .ul .li {
	font-size:28rpx;
	font-weight:500;
	color:rgba(188,188,188,1);
	display: inline-block;
	margin-right: 25rpx;
	line-height: 1;
}

.company-apply-page .ul .column-line {
	border-right: 1px solid #DCDCDC;
	padding-right: 25rpx;
}
.enter {
	width: 100%;
	margin: 50rpx auto;
	text-align: center;
	font-size:28rpx;
	font-weight:500;
	color:#BCBCBC;
	line-height:28rpx;
}

.footer {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	background: #FBFBFF;
}