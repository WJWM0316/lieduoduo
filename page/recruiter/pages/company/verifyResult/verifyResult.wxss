.box {
	background:rgba(255,255,255,1);
	box-shadow:0rpx 10rpx 30rpx 0rpx rgba(22,39,77,0.05);
	border-radius:10rpx;
	margin: 24rpx 30rpx;
}

.box .title{
	padding: 36rpx 30rpx 30rpx 30rpx;
	font-size:32rpx;
	font-weight:500;
	color:rgba(11,9,26,1);
	position: relative;
	margin-bottom: 20rpx;
	line-height: 1;
}

.box .title:before {
	width:8rpx;
	height:40rpx;
	background:rgba(255,220,41,1);
	border-radius:0rpx 100rpx 100rpx 0px;
	display: block;
	content: '';
	position: absolute;
	top: 50%;
	left: 0;
	transform: translateY(-50%);
}

.box .ul {
	margin: 0 30rpx;
}
.box .li {
	display: flex;
	padding-bottom: 32rpx;
	line-height: 1;
}

.box .footer {
	border-top: 1rpx dotted #652791;
	padding-top: 32rpx ;
}

.box .li .key{
	font-size:28rpx;
	font-weight:300;
	color:rgba(98,98,98,1);
	text-align: left;
}

.box .li .value{
	font-size:28rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
	text-align: right;
	flex: 1;
}

.button-box{
	display: flex;
	margin: 56rpx;
}

.button-box .button{
	height:98rpx;
	border-radius:48rpx;
	line-height: 98rpx;
	text-align: center;
	font-size:32rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
	flex: 1;
}

.button-box .button1{
	border:1rpx solid rgba(101,39,145,1);
	color: rgba(101,39,145,1);
	margin-right: 15rpx;
}

.button-box .button2{
	background:rgba(101,39,145,1);
	color: white;
	margin-left: 15rpx;
}