@import '../../../../../iconfont.wxss';

.baseEdit {
	min-height: 100vh;
	background: #FAFCFF;
	padding: 24rpx 30rpx;
}
.head {
	background:rgba(255,255,255,1);
	box-shadow:0rpx 10rpx 30rpx 0rpx rgba(22,39,77,0.05);
	border-radius:10rpx;
	padding: 0 0 0 40rpx;
}
.head .msg .item {
	overflow: hidden;
	font-size:28rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	line-height:28rpx;
	padding: 47rpx 70rpx 47rpx 40rpx;
	border-bottom: 1rpx solid #E8E9EB;
}
.companyLogo {
	padding: 32rpx 70rpx 32rpx 40rpx;
}
.website {
	padding: 32rpx 40rpx 32rpx 40rpx;
}
.head .msg .item:last-child {
	margin-bottom: 0;
	border-bottom: none;
}
.head .msg .item .txt {
	float: left;
	color: #626262;
	font-weight: 300;
}
.head .msg .item .value {
	width: 400rpx;
	float: right;
	text-align: right;
}
.icon {
	position: absolute;
	font-size: 32rpx;
	color: #CED7DC;
	top: 50%;
	transform: translateY(-50%);
	right: 30rpx;
}