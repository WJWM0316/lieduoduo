
.recruiterList .ul {
	margin: 24rpx 30rpx;
	overflow: hidden;
}

.recruiterList .li {
	height:180rpx;
	background:rgba(255,255,255,1);
	box-shadow:0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
	border-radius:10rpx;
	padding: 30rpx;
	box-sizing: border-box;
	display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 100%;
  margin-bottom: 24rpx;
}

.recruiterList .li .img-box {
	width:120rpx;
	height:120rpx;
	box-shadow:0rpx 2rpx 12rpx 0rpx rgba(0,0,0,0.12);
	border:2rpx solid rgba(232,233,235,1);
	border-radius: 50%;
	position: absolute;
	left: 30rpx;
}

.recruiterList .li image {
	width:120rpx;
	height:120rpx;
	border-radius: 50%;
}

.recruiterList .li .recruiterMsg {
	flex: 1;
	padding-left: 150rpx;
}

.recruiterList .li .name {
	font-size:36rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	line-height: 1;
	margin-bottom: 20rpx;
}

.recruiterList .li .detail {
	font-size:28rpx;
	font-weight:300;
	color:rgba(98,98,98,1);
	line-height: 1;
}

.recruiterList .li .circle {
  width:36rpx;
  height:36rpx;
  box-sizing: border-box;
  border: 1px solid rgba(188, 188, 188, 1);
  border-radius: 50%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
  text-align: center;
  line-height: 36rpx;
}

.recruiterList .li .circle .icon{
  font-size: 20rpx;
  vertical-align: text-top;
  margin-top: -5rpx;
  font-weight: 900;
}


.recruiterList .li .active-circle {
  background:rgba(101,39,145,1);
  border: 1px solid rgba(188, 188, 188, 1);
  color: white;
}

.recruiterList .li .vip {
  width: 36rpx;
  height: 36rpx;
  background: #FFDC29;
  border: 2rpx solid #fff;
  box-sizing: border-box;
  color: #652791;
  line-height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: 700;
  position: absolute;
  bottom: 0;
  right: 0;
  border-radius: 50%;
}

.slide-view {
  height: 180rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.slide-view .content {
  height: 180rpx;
  width: calc(100vw - 60rpx);
}

.slide-view .content .img-box {
  left: 30rpx;
}

.slide-view  .button-box {
  height: 180rpx;
}

.slide-view  .button-box .button {
  width:134rpx;
  height:180rpx;
  background:rgba(237,92,92,1);
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(34,56,101,0.08);
  border-radius:10rpx;
  line-height: 180rpx;
  text-align: center;
  font-size:28rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 8rpx;
  display: inline-block;
}

.recruiterList .footer {
	font-size:32rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
	text-align: center;
}

.recruiterList .footer view{
	display: inline-block;
}