@import '../../../../../iconfont.wxss';

.recruiter-index .index-bannar image {
  width: 100%;
  display: block;
}

.index-list-box {
  margin: 0 30rpx;
  transform: translateY(-130rpx);
  border-radius: 10rpx 10rpx 0 0;
  overflow: hidden;
}

.recruiter-index .ul-tab-bar {
  display: flex;
  line-height: 80rpx;
  border-bottom: 1rpx solid #BACED8;
}

.recruiter-index .ul-tab-bar .li {
  flex-grow: 1;
  font-size:28rpx;
  font-weight:400;
  color:rgba(188,188,188,1);
  text-align: center;
  position: relative;
  background:rgba(243,245,248,1);
}

.recruiter-index .ul-tab-bar .li:before {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -28rpx;
  width: 0;
  height: 0;
  border-width:16rpx;
  border-style: solid;
  border-color: rgba(228,238,255,1) transparent transparent transparent;
  display: block;
  content: '';
  opacity: 0;
  visibility: hidden;
  transition: all ease .2s;
  z-index: 2;
}

.recruiter-index .ul-tab-bar .li:after {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -30rpx;
  width: 0;
  height: 0;
  border-width:16rpx;
  border-style: solid;
  border-color: #BACED8 transparent transparent transparent;
  display: block;
  content: '';
  opacity: 0;
  visibility: hidden;
  transition: all ease .4s;
  z-index: 1;
}

.recruiter-index .ul-tab-bar .active {
  font-weight:500;
  color: #652791;
  background: #652791;
  pointer-events: none;
}

.recruiter-index .ul-tab-bar .active:before {
  opacity: 1;
  visibility: visible;
}

.recruiter-index .ul-tab-bar .active:after {
  opacity: 1;
  visibility: visible;
}

.interview-tab-bar {
  display: flex;
  line-height: 98rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 11rpx 30rpx 0rpx rgba(153,193,214,0.08);
  position: relative;
  z-index: 2;
  position: fixed;
  left: 0;
  width: 100%;
}

.interview-tab-bar .li {
  flex-grow: 1;
  font-size:32rpx;
  font-weight:400;
  color:rgba(53,57,67,1);
  text-align: center;
  position: relative;
}

.interview-tab-bar .li .span{
  display: inline-block;
  position: relative;
  line-height: 1;
  vertical-align: middle;
}

.interview-tab-bar .red-dot .span:before {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  display: block;
  content: '';
  background: red;
  width:14rpx;
  height:14rpx;
  background:rgba(255,73,73,1);
  border-radius: 50%;
}

.interview-tab-bar .li:before {
  position: absolute;
  display: block;
  content: '';
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width:32rpx;
  height:8rpx;
  background:rgba(40,120,255,1);
  border-radius:4px;
  opacity: 0;
  visibility: hidden;
  transition: all ease .4s;
}

.interview-tab-bar .li.active {
  pointer-events: none;
}

.interview-tab-bar .li.active:before {
  opacity: 1;
  visibility: visible;
}

.select-box {
  overflow: hidden;
  margin: 24rpx 30rpx;
}

.select-box .item {
  line-height: 64rpx;
  padding: 0 18rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
  border-radius:32rpx;
  display: inline-block;
  margin-right: 16rpx;
  font-size:26rpx;
  font-weight:500;
  color: #652791;
  position: relative;
}

.select-box .picker {
  display: inline-block;
}

.select-box .iconfont {
  display: inline-block;
  margin-left: 5rpx;
}


.interview-page-title {
  overflow: hidden;
  line-height: 1;
  margin: 40rpx 32rpx 60rpx 32rpx;
}

.interview-page-title .text {
  font-size:32rpx;
  font-weight:600;
  color:rgba(53,64,72,1);
  line-height:32rpx;
  float: left;
}

.interview-page-title .button {
  font-size:28rpx;
  font-weight:400;
  color:rgba(40,120,255,1);
  float: right;
}

.list-box {
  padding-bottom: 122rpx;
}