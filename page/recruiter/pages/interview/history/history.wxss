.ul {
  overflow: hidden;
  margin: 24rpx 30rpx;
}

.ul .li {
  background:rgba(255,255,255,1);
  box-shadow:0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
  border-radius:10rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
}

.ul .li .row-one {
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  position: relative;
  border-bottom: 1px dotted #BACED8;
  margin: 0 28rpx 28rpx;
}

.ul .li .img-box {
  width:120rpx;
  height:120rpx;
  box-shadow:0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
  border-radius:50%;
  position: absolute;
  top: 40rpx;
  left: 0;
  overflow: hidden;
}

.ul .li .img-box image{
  width: 100%;
  height: 100%;
}

.ul .li .content {
  margin-left: 144rpx;
  flex: 1;
}

.ul .li .user-name {
  max-width:314rpx;
  height:36rpx;
  font-size:36rpx;
  font-weight:600;
  color:rgba(40,40,40,1);
  line-height:36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ul .li .infos1 {
  max-width:490rpx;
  height:26rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(146,146,146,1);
  line-height:1;
  margin-top: 14rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ul .li .infos2 {
  max-width:490rpx;
  height:26rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(98,98,98,1);
  line-height:26rpx;
  margin-top: 14rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ul .li .row-two {
  max-width:calc(100% - 56rpx);
  height:30rpx;
  line-height: 1;
  font-size:26rpx;
  font-weight:400;
  color:rgba(98,98,98,1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 28rpx;
  padding-bottom: 28rpx;
}

.ul .li .time {
  position: absolute;
  top: 24rpx;
  right: 0;
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:#BCBCBC;
  line-height:24rpx;
}

.ul .li .time.color {
  color: #652791;
}

.ul .li .row-two text{
  color: #652791;
}

.ul .li .icon-mianshizhiwei {
  color: #DCDCDC;
  margin-right: 16rpx;
  font-size: 34rpx;
}

.formIdBtn {
  padding: 0;
  background: none;
  text-align: left;
  line-height: normal;
  overflow: unset;
  margin-bottom: 44rpx;
}