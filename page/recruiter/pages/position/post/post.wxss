
.entry-list {
	padding-bottom: 212rpx;
}

.position-post .li {
	background: white;
	line-height: 122rpx;
	overflow: hidden;
	font-size:28rpx;
	font-weight:400;
	position: relative;
	padding: 0 40rpx;
}

.position-post .li:after {
	content: '';
	display: block;
	left: 40rpx;
	right: 40rpx;
	height: 1px;
	background: #E8E9EB;
	bottom: 0;
}

.position-post .icon-PC {
	margin-right: 16rpx;
	font-size: 30rpx;
	vertical-align: middle;
}

.position-post .warning .icon-xiangyou {
	margin-left: 15rpx;
	font-size: 30rpx;
	vertical-align: middle;
}

.position-post .clear-bottom:after {
	display: none;
}

.position-post .label-icon {
	margin-right: 24rpx;
	color: #CED7DC;
}

.position-post .key {
	display: inline-block;
	font-size:28rpx;
	font-weight:300;
	color:rgba(53,57,67,1);
}

.position-post .key text {
	color:red;
	margin-right: 6px;
}

.position-post .text2 {
	display: inline-block;
	color: #353943;
	float: right;
	margin-right: 30rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	max-width: 60%;
}

.position-post .text4 {
	position:relative;
	line-height:122rpx;
	width:400rpx;
	height:122rpx;
	position:absolute;
	right:20rpx;
	top: 0;
}

.position-post .li .icon-xiangyou {
  float: right;
  color: #CED7DC;
}

.position-post picker {
	width: unset !important;
	position: absolute;
	right: 20rpx;
	left: 20rpx;
	top: 0;
	bottom: 0;
	overflow: hidden;
	text-align:right;
	margin-right:35rpx;
}

.position-post .picker-box {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	overflow: hidden;
	text-align:right;
	margin-right:35rpx;
	opacity: 0;
}

.position-post picker .text2{
	width: 100%;
	height: 100%;
	text-align: right;
	box-sizing: border-box;
	padding-right: 5rpx;
}

.position-post .link .text2{
	margin-right: 5rpx;
}

.position-post .link .text2{
	margin-right: 5rpx;
}

.tags-list {
	display: inline-block;
	float: right;
}

.tags-list .item {
	display: inline-block;
	margin-left: 20rpx;
}

.position-post .dropdown .text2{
	margin-right: 5rpx;
}


.position-post .warning {
	height:80rpx;
	background:rgba(255,252,240,1);
	line-height: 80rpx;
	font-size:28rpx;
	font-weight:300;
	color:rgba(255,127,77,1);
	padding: 0 40rpx;
	text-align: center;
}


.position-post .tips {
	height:72rpx;
	line-height: 72rpx;
	padding: 0 40rpx;
	text-align: center;
	font-size:24rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
}

.position-post .color-default {
	font-weight:400;
	color:#929292 !important;
}

.position-post .btn-area {
	width: 100%;
	padding: 30rpx 100rpx;
	background: #fff;
	box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
	box-sizing: border-box;
	position: fixed;
	left: 0;
	bottom: 0;
}

.position-post .button-submit {
	height:88rpx;
	background:rgba(245,244,247,1);
	border-radius:48rpx;
	font-size:32rpx;
	font-weight:400;
	color:rgba(205,203,207,1);
	text-align: center;
	line-height: 88rpx;
}

.position-post .button-enable {
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	color:rgba(255,255,255,1);
}

.publish-tips {
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	line-height: 37rpx;
	margin-top: 48rpx;
	text-align: center;
}

.publish-tips text {
	color: #652791;
}