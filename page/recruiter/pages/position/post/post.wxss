@import '../../../../../iconfont.wxss';

.company-post .entry-list {
	box-sizing: border-box;
	width: 100%;
	display: block;
	margin-top: 24rpx;
}

.company-post .entry-list .li {
	background: white;
	line-height: 120rpx;
	overflow: hidden;
	border-bottom:1rpx solid rgba(232,233,235,1);
	font-size:28rpx;
	font-weight:400;
	position: relative;
	padding-left: 24rpx;
}

.company-post .entry-list .li:last-child {
	border-bottom: unset;
}

.company-post .entry-list .label-icon {
	margin-right: 24rpx;
	color: #CED7DC;
}

.company-post .entry-list .text {
	display: inline-block;
	color: #353943;
}

.company-post .entry-list .text2 {
	display: inline-block;
	color: #353943;
	float: right;
	margin-right: 30rpx;
}

.company-post .entry-list .not-certified {
	display: inline-block;
	color: #2878FF;
}

.company-post .entry-list .has-certified {
	display: inline-block;
	color: #BCBCBC;
}

.company-post .entry-list .under-certified {
	display: inline-block;
	color: #F5A623;
}

.company-post .copy-right {
	font-size:26rpx;
	font-weight:400;
	color:#929292;
	line-height:1;
	margin: 50rpx;
	text-align: center;
	margin-bottom: 148rpx;
}

.company-post .copy-right view {
	display: inline-block;
	border-right: 1px solid #E8E9EB;
	margin-right: 24rpx;
	padding-right: 24rpx;
}

.company-post .copy-right view:last-child {
	border-right: unset;
}

.company-post .entry-list .icon-zhishibiao {
  transform: rotate(-90deg);
  float: right;
  color: #CED7DC;
  margin-right: 20rpx;
}

.company-post .entry-list .btn-area {
	margin-top: 24rpx;
}

.company-post .entry-list picker {
	position: absolute;
	right: 20rpx;
	left: 20rpx;
	top: 0;
	bottom: 0;
	overflow: hidden;
}

.company-post .entry-list picker .text2{
	width: 100%;
	height: 100%;
	text-align: right;
	box-sizing: border-box;
	padding-right: 5rpx;
}

.company-post .entry-list .link .text2{
	margin-right: 30rpx;
}

.button-enable {
	background: green;
}