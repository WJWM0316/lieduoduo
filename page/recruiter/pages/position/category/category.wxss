.category-list .li {
	background: white;
	line-height: 120rpx;
	overflow: hidden;
	border-bottom:1rpx solid rgba(232,233,235,1);
	font-size:28rpx;
	font-weight:400;
	position: relative;
	padding-left: 24rpx;
}

.category-list .li:last-child {
	border-bottom: unset;
}

.category-list .text {
	display: inline-block;
	color: #353943;
}

.category-list .icon-zhishibiao {
  transform: rotate(-90deg);
  float: right;
  color: #CED7DC;
  margin-right: 20rpx;
}

.category-list .btn-area {
	margin-top: 24rpx;
}

.button-enable {
	background: green;
}

.user-input {
	height: 120rpx;
	line-height: 120rpx;
}

.user-input input {
	height: 120rpx;
	line-height: 120rpx;
	font-size: 30rpx;
	box-sizing: border-box;
	padding: 0 30rpx;
}