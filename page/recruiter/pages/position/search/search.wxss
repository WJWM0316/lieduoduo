@import '../../../../../iconfont.wxss';

.position-name-search .tips {
	height:72rpx;
	line-height: 72rpx;
	padding: 0 40rpx;
	text-align: center;
	font-size:24rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
}

.position-name-search .input-li {
	height:122rpx;
	line-height: 122rpx;
}

.position-name-search input {
	height:122rpx;
	line-height: 122rpx;
	background:rgba(255,255,255,1);
	font-size:32rpx;
	font-weight:500;
	color:rgba(188,188,188,1);
	padding: 0 40rpx;
}

.position-name-search .item {
	height:98rpx;
	line-height: 98rpx;
	background:white;
	position: relative;
	padding: 0 40rpx;
	overflow: hidden;
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
}

.position-name-search .item:before {
	content: '';
	display: block;
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	top: 0;
	height: 1px;
	background: #E8E9EB;
}

.position-name-search .icon-jiantou {
	float: right;
	font-size: 18rpx;
	color: #DCDCDC;
}

.button-submit {
	height:88rpx;
	background:rgba(245,244,247,1);
	border-radius:48rpx;
	font-size:32rpx;
	font-weight:400;
	color:rgba(205,203,207,1);
	margin: 100rpx;
	text-align: center;
	line-height: 88rpx;
}

.button-enable {
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	border-radius:48rpx;
	color:rgba(255,255,255,1);
}