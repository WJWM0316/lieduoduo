<!-- 加载过滤器 -->
<wxs src="../../../../../utils/filters.wxs" module="filters" />

<navbar title="职位管理"></navbar>
<view style="height: 98rpx"></view>
<view class="office-status-bar" style="top:{{navH}}px">
  <view class="item {{positionStatus === '1' ? 'active' : ''}}" bindtap="onClickTab" data-status="1">招聘中({{onLinePositionNum}})</view>
  <view class="item {{positionStatus === '2' ? 'active' : ''}}" bindtap="onClickTab" data-status="2">下线职位({{offLinePositionNum}})</view>
  <view class="publish" data-action="add" bindtap="routeJump"><i class="icon iconfont icon-bianji"></i> 发布职位</view>
</view>

<view hidden="{{!hasReFresh}}">
	<refreshStatus></refreshStatus>
</view>
<form bindsubmit="formSubmit" report-submit='{{true}}'>
<!--招聘中职位-->
<view class="office-manager-list" hidden="{{positionStatus === '2'}}">
	<view class="li"
		wx:for="{{onLinePosition.list}}"
		wx:for-item="item"
		wx:key="{{item.id}}"
		>
		<button 
			form-type="submit" 
			class="formIdBtn"
			data-action="detail"
			data-position-id="{{item.id}}"
			data-company-id="{{item.companyId}}"
			bindtap="routeJump">
			<view class="header">
				<view class="office-name">{{item.positionName}}</view>
				<view class="office-sarary">{{item.emolumentMin}}K~{{item.emolumentMax}}K</view>
			</view>
			<view class="tags-box">
				<view class="item">{{item.city}}{{item.district}}</view>
				<view class="item">{{item.workExperienceName}}</view>
				<view class="item">{{item.educationName}}</view>
			</view>
			<view class="item-status"></view>
		</button>
	</view>
	<bottomStatus status="{{onBottomStatus}}" listData="{{onLinePosition.list}}"></bottomStatus>
</view>
<!--下线-->
<view class="office-manager-list"  hidden="{{positionStatus === '1'}}">
	<view class="li"
		wx:for="{{offLinePosition.list}}"
		wx:for-item="item"
		wx:key="{{item.id}}"
		data-action="detail"
		data-position-id="{{item.id}}"
		data-company-id="{{item.companyId}}"
		bindtap="routeJump">
		<view class="header">
			<view class="office-name">{{item.positionName}}</view>
			<view class="office-sarary">{{item.emolumentMin}}K~{{item.emolumentMax}}K</view>
		</view>
		<view class="tags-box">
			<view class="item">{{item.city}}{{item.district}}</view>
			<view class="item">{{item.workExperienceName}}</view>
			<view class="item">{{item.educationName}}</view>
		</view>
		<view class="item-status">{{filters.positionFilter(item.status)}}</view>
	</view>
	<bottomStatus status="{{offBottomStatus}}" listData="{{offLinePosition.list}}"></bottomStatus>
</view>
</form>
<tab-bar tabType="1"></tab-bar>
<view style="height: 98rpx"></view>