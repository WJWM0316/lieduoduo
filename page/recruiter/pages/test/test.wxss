.index-bannar image {
  width: 100%;
  height: 400rpx;
  vertical-align: text-top;
  display: block;
  position: absolute;
  top: 0;
}
.fixed {
  position: fixed !important;
  left: 0;
  right: 0;
  z-index: 2;
}

.fixed:before {
  position: absolute;
  left: -30rpx;
  height: 120rpx;
  top: -20rpx;
  content: '';
  display: block;
  background: #FBFBFF;
  background: transparent;
  right: -30rpx;
}
.default{
  background:white;
  height: 98rpx;
  line-height: 98rpx;
  padding-right: 36rpx;
  border-top: 4rpx solid #FBFBFF;
  position: relative;
}

.default .kind{
  width:60rpx;
  height:98rpx;
  z-index: 2;
  padding-right: 36rpx;
  padding-left: 11rpx;
  float: right;
  text-align: center;
  position: relative;
  text-align: center;
  line-height: 98rpx;
  color: #CDCBCF;
  background: white;
}

.default .kind.active{
  color: #652791;
}

.default .kind::before{
  content: '';
  display: block;
  height: 36rpx;
  width: 1px;
  background: #E8E9EB;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%) scaleX(.5);
}

.default .down{
  width:120rpx;
  height:98rpx;
  z-index: 2;
  float: right;
  text-align: center;
  color: #CDCBCF;
  position: relative;
  padding-right: 28rpx;
}

.default .down:before{
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(255,255,255,.6), rgba(255,255,255,1));
  content: '';
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
}

.default .down .iconfont{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 28rpx;
}

.default .func_zone{
  position: absolute;
  right: 0;
  bottom: 0;
  height: 100%;
}

.tab-bar {
  position: relative;
  height: 98rpx;
  line-height: 98rpx;
  overflow: scroll;
  z-index: 1;
  font-size:28rpx;
  font-weight:300;
  color:rgba(40,40,40,1);
  background: white;
  padding-left: 48rpx;
  box-sizing: border-box;
  background: white;
  white-space: nowrap;
  position: relative;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  width: calc(100vw - 160rpx - 48rpx);
  box-sizing: border-box;
  float: left;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.tab-bar .li {
  position: relative;
  margin-right: 48rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 98rpx;
  overflow: hidden;
  max-width: 120rpx;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
}

.tab-bar .li:before {
  width:30rpx;
  height:6rpx;
  background:rgba(255,220,41,1);
  border-radius:3rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 6rpx;
  content: '';
  display: block;
  opacity: 0;
  transition: all ease .4s;
}

.tab-bar .active:before {
  opacity: 1;
}

.lookMe {
  display: inline-block;
}
.tab-bar .total {
  width:36rpx;
  height:36rpx;
  background:rgba(255,127,76,1);
  border-radius: 50%;
  line-height: 34rpx;
  text-align: center;
  font-size:24rpx;
  font-weight:700;
  color:rgba(255,255,255,1);
  position: absolute;
  top: 50%;
  right: 20%;
  transform: translate3d(0, -50%, 0);
}

.tab-bar .active:before {
  opacity: 1;
  visibility: visible;
}

.tab-bar .active:after {
  opacity: 1;
  visibility: visible;
}