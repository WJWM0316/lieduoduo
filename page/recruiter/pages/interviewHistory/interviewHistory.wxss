@import '../../../../iconfont.wxss';

.office-manager-list {
  overflow: hidden;
  margin-bottom: 18rpx;
}

.office-manager-list .li {
  overflow: hidden;
  position: relative;
  background:rgba(255,255,255,1);
  box-shadow:0px 8rpx 20rpx 0rpx rgba(34,56,101,0.08);
  border-radius:8rpx;
  padding: 35rpx 28rpx;
  margin-bottom: 18rpx;
  position: relative;
}

.office-manager-list .li:last-child {
  margin-bottom: 0;
}

.office-manager-list .li .header {
  font-size:32rpx;
  font-weight:bold;
  color:rgba(40,40,40,1);
}

.office-manager-list .li .header view {
  display: inline-block;
  margin-right: 15rpx;
}

.office-manager-list .li .tags-box {
  font-size:24rpx;
  font-weight:400;
  color:rgba(146,146,146,1);
  line-height: 1;
  margin-top: 25rpx;
}

.office-manager-list .li .tags-box view {
  display: inline-block;
  margin-right: 16rpx;
  line-height: 34rpx;
  padding: 0 12rpx;
  background:rgba(248,248,248,1);
  border-radius:4rpx;
}

.office-manager-list .li .item-status {
  font-size:26rpx;
  font-weight:500;
  color:rgba(188,188,188,1);
  line-height:26rpx;
  margin-top: 20rpx;
  text-align: right;
}

.office-manager-list .li .opening {
  color:#2878FF;
}

.office-manager-list .li .fail {
  color:#ED5C5C;
}

.office-status-bar{
  box-sizing: border-box;
  width: 100%;
  height: 98rpx;
  background-color: #FFFFFF;
  box-shadow:0px 11px 30px 0px rgba(153,193,214,0.08);
  white-space: nowrap;
  overflow-x: scroll;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.office-status-bar::after{
  content: '.';
  display: block;
  opacity: 0;
}

.office-status-bar .item {
  box-sizing: border-box;
  padding: 0 30rpx;
  text-align: center;
  background-color: #FFFFFF;
  line-height: 54rpx;
  height: 54rpx;
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #282828;
  border-radius: 27rpx;
}

.office-status-bar .active {
  background-color: #E4EEFF;
  font-size:26rpx;
  font-weight:500;
  color:rgba(40,120,255,1);
}

.office-status-bar::after{
  content: '.';
  display: block;
  opacity: 0;
}

.scroll-view_H {
  margin-top: 24rpx;
  height: calc(100vh - 300rpx);
}