.bindPhone .img {
  width: 100%;
}
.bindPhone {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100vh;
  background: #fff;
}
.bindPhone .msg {
  width: 100%;
  position: absolute;
  top: 230rpx;
  text-align: center;
}
.bindPhone .msg .title {
  font-size: 56rpx;
  font-weight: 700;
  color: #fff;
  line-height: 56rpx;
}
.bindPhone .msg .txt {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  line-height: 32rpx;
  margin-top: 22rpx;
}
.bindPhone .phoneInput, .inputBox {
  width: 100%;
  height: 98rpx;
  border: 1rpx solid #E8E9EB;
  background: #FBFBFF;
  box-sizing: border-box;
  padding: 0 0 0 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #282828;
}
.inputBox .codeInput {
  width: 60%;
  height: 100%;
}
.code {
  margin-top: 32rpx;
  position: relative;
}
.voiceCode {
  color: #652791;
}
.code .sendBtn {
  text-align: center;
  line-height: 98rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #652791;
  right: 40rpx;
  top: 0;
  position: absolute;
  z-index: 10;
  background: none;
}
.code .sendBtn.wait {
  color: 652791;
}
.form {
  padding: 80rpx 100rpx 0;
}
.tip {
  width: 100%;
  text-align: center;
  color: #929292;
  margin-top: 43rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 37rpx;
}
.wxBtn {
  position:absolute;
  bottom:49rpx;
  left:0;
  width:100%;
  text-align:center;
}
.wxLogin {
  font-size: 28rpx;
  font-weight: 500;
  color: #652791;
  line-height: 28rpx;
  text-align: center;
  display: inline-block;
  background: none;
}
.wxLogin::after{border:none}
.icon {
  display: inline-block;
  font-size: 28rpx;
  margin-left: 8rpx;
}
.bindBtn {
  width: 550rpx;
  height: 88rpx;
  background: #652791;
  box-shadow: 0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 88rpx;
  position: absolute;
  bottom: 126rpx;
  left: 50%;
  margin-left: -275rpx;
}

.bindBtn.noClick {
  background: #F5F4F7;
  color: #CDCBCF;
  box-shadow: none;
}