@import '../../../../iconfont.wxss';
.bindPhone .img {
  width: 100%;
}
.bindPhone {
  position: relative;
}
.bindPhone .msg {
  width: 100%;
  position: absolute;
  top: 230rpx;
  text-align: center;
}
.bindPhone .msg .title {
  font-size: 56rpx;
  font-weight: 700;
  color: #fff;
  line-height: 56rpx;
}
.bindPhone .msg .txt {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  line-height: 32rpx;
  margin-top: 22rpx;
}
.bindPhone input {
  width: 100%;
  height: 98rpx;
  border: 1rpx solid #E8E9EB;
  background: #F7F9FC;
  box-sizing: border-box;
  padding: 0 20rpx 0 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #A59CB6;
}
.code {
  margin-top: 32rpx;
  position: relative;
}
.voiceCode {
  color: #652791;
}
.code .sendBtn {
  width: 162rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background: #652791;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  right: 20rpx;
  top: 50%;
  margin-top: -30rpx;
  display: block;
  position: absolute;
  z-index: 10;
}
.form {
  padding: 80rpx 100rpx 0;
}
.tip {
  width: 100%;
  text-align: center;
  color: #929292;
  margin-top: 43rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 37rpx;
}
.wxLogin {
  font-size: 28rpx;
  font-weight: 500;
  color: #652791;
  line-height: 28rpx;
  margin-top: 215rpx;
  text-align: center;
}
.icon {
  display: inline-block;
  margin-left: 8rpx;
}
.bindBtn {
  width: 550rpx;
  height: 88rpx;
  background: #652791;
  box-shadow: 0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 88rpx;
  margin-top: 41rpx;
}