@import '../../../../iconfont.wxss';
.arrangement {
  background: #F5F5F9;
  padding-bottom: 148rpx;
  min-height: 100vh;
  box-sizing: border-box;
}
.tip {
  padding: 0 50rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  background: #FFFCF0;
  font-size: 28rpx;
  font-weight: 300;
  color: #FF7F4D;
  line-height: 80rpx;
}
.headInfo {
  padding: 24rpx 30rpx 0;
}
.content {
  padding: 24rpx 30rpx;
}
.roleDetail, .detail, .date, .realDate {
  border-radius: 10rpx;
  box-shadow: 0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
  background: #fff;
}
.date {
  margin-top: 24rpx;
}
.title {
  padding: 28rpx 0 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #282828;
  line-height: 32rpx;
}
.title .icon {
  width: 8rpx;
  height: 40rpx;
  background: #FFDC29;
  border-radius: 0rpx 100rpx 100rpx 0rpx;
  display: inline-block;
  vertical-align:sub;
  margin-right: 22rpx;
}
.title .newTip {
  font-size: 26rpx;
  font-weight: 400;
  color: #626262;
  margin-left: 24rpx;
  line-height: 24rpx;
}
.detail .msgItem {
  padding: 0 32rpx 0 30rpx;
}
.detail .inner {
  border-bottom: 1rpx solid #E8E9EB;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 108rpx;
  height: 108rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.detail .inner.noborder {
  border-bottom: none;
}
.detail .msgItem.jump .inner{
  padding: 0 44rpx 0 0;
}
.detail .inner .txt {
  width: 144rpx;
  flex-basis: 144rpx;
  color: #929292;
  display: inline-block;
}
.detail .inner .msg {
  display: flex;
  color: #282828;
  overflow: hidden;
  line-height: 40rpx;
  align-items: center;
  flex: 1;
}
.detail .inner .msg input {
  font-size: 28rpx;
}
.detail .inner .icon {
  font-size: 32rpx;
  position: absolute;
  right: 0rpx;
  top: 0;
  color: #D3CFD6;
}
.detail .inner .iconfont.icon1 {
  width: 27rpx;
  display: inline-block;
  font-size: 27rpx;
  color: #DCDCDC;
  margin-right: 20rpx;
}
.dateItem {
  padding: 0 32rpx 0 30rpx;
}
.dateItem .inner {
  padding: 38rpx 0 40rpx 0;
  border-bottom: 1rpx solid #E8E9EB;
  overflow: hidden;
}
.read .inner {
  border: none;
}
.dateItem .inner.noborder {
  border: none;
}
.dateItem .inner .txt {
  font-size: 28rpx;
  font-weight: 400;
  color: #929292;
  line-height: 28rpx;
  float: left;
}
.dateItem .inner .msg {
  font-size: 26rpx;
  font-weight: 500;
  color: #652791;
  line-height: 26rpx;
  float: right;
}
.dateItem .inner .msg .add {
  font-weight:700;
  font-size: 38rpx;
  font-weight:700;
  margin-right:7rpx;
  line-height: 26rpx;
  height: 26rpx;
  display: inline-block;
  overflow: hidden;
}
.dateItem .inner .removeIcon {
  width: 30rpx;
  height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ED5C5C;
  border-radius: 50%;
  float: left;
  margin-right: 30rpx;
}
.dateItem .inner .removeIcon .icon1 {
  width: 14rpx;
  height: 3rpx;
  background: #fff;
}
.xuhao {
  display: inline-block;
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: 500;
  color: #929292;
  float: left;
  margin-right: 48rpx;
}
.dateDetail {
  font-size: 28rpx;
  font-weight: 400;
  color: #282828;
  line-height: 28rpx;
  float: left;
}

.dateItem .inner {
  position: relative;
}
.dateItem .inner.sure {
  height: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.radioBtn {
  transform: scale(0.62);
}
.dateItem .inner .icon {
  font-size: 32rpx;
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-70%);
  color: #D3CFD6;
}
.radio-group label .sure {
  border-bottom: 1rpx solid #E8E9EB;
}
.radio-group label:last-child .sure {
  border-bottom: none;
}
.btnBox {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 100rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.btnBox .btn {
  height: 88rpx;
  background: #652791;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 88rpx;
  box-shadow: 0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
  border-radius: 48rpx;
}
.btnBox1 {
  width: 100%;
  box-sizing: border-box;
  padding: 15rpx 30rpx 21rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.btnBox1 .txt {
  line-height: 84rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #626262;
}
.btnBox1 .btn {
  width: 218rpx;
  height: 84rpx;
  background: #652791;
  border-radius: 48rpx;
  float: right;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 84rpx;
}
.realDate {
  margin-top: 20rpx;
  padding: 78rpx 0;
}
.realDate .txt1 {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #282828;
  line-height: 36rpx;
}
.realDate .txt2 {
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #626262;
  line-height: 24rpx;
  margin-top: 16rpx;
}
.realDate .txt3 {
  text-align: center;
  font-size: 64rpx;
  font-weight: 700;
  color: #652791;
  line-height: 64rpx;
  margin-top: 54rpx;
}