.job {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header{
  display: flex;
  justify-content: space-between;
  padding-top: 28rpx;
  padding-left: 30rpx;
  background-color: #F7F9FD;
}
.left{
  display: flex;
}
.chooseArea{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #652791;
  width: 182rpx;
  height: 64rpx;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  margin-right: 16rpx;
}
.interested{
  font-size: 26rpx;
  color: #652791;
  width: 164rpx;
  height: 64rpx;
  border-radius:32rpx 0rpx 0rpx 32rpx;
  background-color: #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
}
.interested i{
  margin-right: 6rpx;
}


.select-box {
  width: 100%;
  overflow: hidden;
  font-size: 0;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 2;
}
.select-tab {
  box-sizing: border-box;
  padding: 35rpx 40rpx;
  background: #fff;
  box-shadow:0rpx 18rpx 20rpx 0rpx rgba(101,39,145,0.04);
  position: relative;
}
.select-box .item {
  font-size:28rpx;
  font-weight:400;
  color:#5C565D;
  line-height:28rpx;
  position: relative;
  display: inline-block;
  margin-right: 48rpx;
}
.select-box .item .txt {
  margin-right: 4rpx;
}
.select-box .picker {
  display: inline-block;
}

.select-box .iconfont {
  display: inline-block;
}

.select-area {
  width: 100%;
  padding: 64rpx 40rpx 32rpx;
  background: #fff;
  box-sizing: border-box;
  font-size: 0;
}
.select-area-item {
  padding: 0 48rpx;
  line-height: 58rpx;
  border-radius:29rpx;
  border:1rpx solid #CDCBCF;
  margin: 0 26rpx 24rpx 0;
  display: inline-block;
  color: #626262;
  font-size:26rpx;
  font-weight:300;
}