@import '../../../../iconfont.wxss';
.recruiterDetail {
  background: #F5F4F7;
  padding-bottom: 152rpx;
}
.header {
  width: 100%;
  height: 646rpx;
  position: relative;
}
.header .bgImg {
  width: 100%;
  height: 100%;
}
.content {
  position: absolute;
  width: 184rpx;
  height: 184rpx;
  top: 70rpx;
  left: 50%;
  margin-left: -92rpx;   
}
.content .avatar {
  width: 100%;
  height: 100%;
  position: relative;
}
.content .avatar image {
  width: 100%;
  height: 100%;
  box-shadow: 0rpx 2rpx 12rpx 0rpx rgba(0,0,0,0.12);
  border: 8rpx solid #fff;
  box-sizing: border-box;
  overflow: hidden;
  border-radius: 50%;
}
.content .avatar.vip::after {
  content: 'V';
  width: 46rpx;
  height: 46rpx;
  overflow: hidden;
  border-radius: 50%;
  box-sizing: border-box;
  border: 4rpx solid #fff;
  background: #FFDC29;
  color: #000;
  font-size: 20rpx;
  font-weight: 700;
  text-align: center;
  line-height: 40rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}
.labels {
  position: absolute;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  border: 1rpx solid #CDCBCF;
  font-size: 22rpx;
  font-weight: 400;
  color: #fff;
}
.label0 {
  font-size: 24rpx;
  font-weight:500;
  top: -17rpx;
  left: -6rpx;
  transform: translateX(-100%);
  box-shadow: 0 3rpx 3rpx #fff;
}
.label1 {
  top: -5rpx;
  right: -10rpx;
  transform: translateX(100%);
}
.label2 {
  top: 70rpx;
  left: -36rpx;
  transform: translateX(-100%);
}
.label3 {
  top: 70rpx;
  right: -36rpx;
  transform: translateX(100%);
}
.label4 {
  top: 143rpx;
  left: -10rpx;
  transform: translateX(-100%);
}
.label5 {
  top: 143rpx;
  right: -10rpx;
  transform: translateX(100%);
}
.userInfo {
  width: 100%;
  text-align: center;
  position: absolute;
  top: 279rpx;
  left: 0;
  color: #fff;
}
.userInfo .name {
  font-size: 46rpx;
  line-height: 46rpx;
  font-weight: 600;
}
.userInfo .position {
  font-size: 24rpx;
  font-weight: 300;
  margin-top: 12rpx;
}
.userInfo .sign {
  width: 566rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 36rpx;
  margin: 16rpx auto 0;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.mainContent {
  padding: 0 30rpx;
}
.dataShow {
  padding: 50rpx 36rpx 30rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: -175rpx auto 0;
  position:relative;
  box-sizing: border-box;
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
}
.dataShow .dataBox {
  display: flex;
  text-align: center;
}
.data {
  flex: 1;
  font-size: 24rpx;
  font-weight:300;
  color: #626262;
}
.num {
  font-size: 50rpx;
  font-weight: 500;
  color: #282828;
}
.callBtn {
  width: 618rpx;
  height: 88rpx;
  background: #FFDC29;
  box-shadow: 0rpx 6rpx 12rpx 0rpx rgba(101,39,145,0.15);
  border-radius: 45rpx;
  margin: 36rpx auto 38rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #282828;
  line-height: 88rpx;
}
.callBtn.isCalled {
  color: #652791;
  background: #EFE9F4;
}
.more {
  font-size: 26rpx;
  font-weight: 300;
  color: #626262;
  line-height: 26rpx;
  text-align: center;
}
.meToo {
  margin-top: 50rpx;
}
.more .icon {
  font-size: 26rpx;
  line-height: 26rpx;
  margin-left: 12rpx;
  color: #652791;
  display: inline-block;
}
.profile, .declaration, .mainContent .position {
  margin-top: 20rpx;
  padding: 40rpx;
  background: #fff;
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
  border-radius: 10rpx;
}
.title {
  font-size: 28rpx;
  font-weight: 500;
  color: #5C565D;
  line-height: 28rpx;
}
.title .icon {
  width: 24rpx;
  height: 28rpx;
  padding: 6rpx 0 0 6rpx;
  background: #EFE9F4;
  display: inline-block;
  box-sizing: border-box;
  margin-right: 21rpx;
}
.fan {
  width: 24rpx;
  height: 28rpx;
  border: 2rpx solid #652791;
  box-sizing: border-box;
}
.title .txt {
  margin-top: 3rpx;
  box-sizing: border-box;
  font-weight: 500;
  display: inline-block;
}
.msg {
  font-size: 28rpx;
  margin-top: 36rpx;
  font-weight: 300;
  color: #282828;
  line-height: 48rpx;
}
.msg.shrink {
  height: 286rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
  overflow: hidden;
}
.openbtn {
  font-size: 26rpx;
  font-weight: 400;
  color: #652791;
  line-height: 26rpx;
  margin-top: 24rpx;
  height: 26rpx;
  display: flex;
  align-items: center;
}
.openbtn .icon {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #652791;
  font-weight: 300;
  margin-left: 10rpx;
}
.openbtn .icon.shrink {
  transform: rotate(180deg);
}
.declaration, .mainContent .position {
  margin-top: 20rpx;
}
.descList {
  margin-top: 46rpx;
}
.descItem {
  margin-bottom: 20rpx;
}
.descItem:last-child {
  margin-bottom: 0;
}
.descTitle {
  font-size: 26rpx;
  font-weight: 500;
  color: #652791;
  line-height: 36rpx;
  padding: 12rpx 30rpx;
  border: 1rpx solid #BACED8;
  position: relative;
  z-index: 2;
  background: #fff;
  display: inline-block;
}
.descAnswer {
  font-size: 28rpx;
  font-weight: 400;
  color: #282828;
  line-height: 40rpx;
  padding: 34rpx 36rpx 34rpx 24rpx;
  border: 1rpx solid #BACED8;
  margin: -15rpx 0 0 6rpx;
  position: relative;
  z-index: 1;
  background: #fff;
  display: inline-block;
}
.positionList {
  padding-top: 40rpx;
}
.positionItem {
  padding: 40rpx 0;
  border-top: 1rpx dashed #CED7DC;
}
.positionList .positionItem:last-child {
  padding-bottom: 0;
}
.positionHead {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.positionTitle {
  width: 394rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #282828;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.money {
  font-size: 36rpx;
  font-weight: 500;
  color: #FF7F4C;
}
.positionDeatil {
  width: 100%;
  margin-top: 20rpx;
  font-size: 26rpx;
  font-weight: 300;
  color: #5C565D;
  line-height: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.footer {
  width: 100%;
  height: 132rpx;
  padding: 19rpx 288rpx 13rpx 132rpx;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0rpx -5rpx 16rpx 0rpx rgba(101,39,145,0.08);
  border-radius: 28rpx 28rpx 0rpx 0rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
}
.footer .avatar {
  width: 100rpx;
  height: 100rpx;
  border: 3rpx solid #fff;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  margin-top: -50rpx;
  left: 20rpx;
}
.footer .info {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.footer .info .name {
  font-size: 32rpx;
  font-weight: 500;
  color: #282828;
  line-height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.footer .info .sign {
  font-size: 22rpx;
  font-weight: 300;
  color: #282828;
  line-height: 22rpx;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.footer .btnBox {
  width: 250rpx;
  height: 80rpx;
  position: absolute;
  top: 50%;
  margin-top: -40rpx;
  right: 26rpx;
}
.footer .btnBox .btn {
  width: 100%;
  height: 100%;
  display: block;
  background: #652791;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  line-height: 80rpx;
}
.collection {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  box-shadow: 0rpx 4rpx 14rpx 0rpx rgba(101,39,145,0.18);
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #8452A7;
  position: fixed;
  right: 20rpx;
  bottom: 164rpx;
  z-index: 10;
}
.positionBtn {
  padding: 0 39rpx 0 36rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #652791;
  line-height: 66rpx;
  text-align: center;
  position: fixed;
  left: 20rpx;
  bottom: 164rpx;
  z-index: 10;
  background: #fff;
  box-shadow: 0rpx 2rpx 10rpx 0rpx rgba(101,39,145,0.12);
  border-radius: 33rpx;
  border: 1rpx solid rgba(239,233,244,1);
}