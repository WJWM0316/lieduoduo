@import '../../../../iconfont.wxss';

.title {
  font-size:28rpx;
  font-weight:500;
  color:rgba(98,98,98,1);
  padding-top: 40rpx;
  margin-left: 40rpx;
}

.title .icon {
  width: 24rpx;
  height: 28rpx;
  padding: 6rpx 0 0 6rpx;
  background: #EFE9F4;
  display: inline-block;
  box-sizing: border-box;
  margin-right: 21rpx;
}
.title .fan {
  width: 24rpx;
  height: 28rpx;
  border: 2rpx solid #652791;
  box-sizing: border-box;
}

.company-infos {
	box-shadow:0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
	border-radius:10rpx;
	display: block;
	overflow: hidden;
	box-sizing: border-box;
	padding: 60rpx;
	margin: 20rpx 30rpx;
}

.company-infos .header {
	height:102rpx;
	border-radius:20rpx;
	display: flex;
}

.company-infos .header .text {
	flex: 1;
	line-height: 1;
	position: relative;
}

.company-infos .header .img-box {
	width:102rpx;
	height:102rpx;
	border-radius:20rpx;
}

.company-infos .header .position-name {
	display: block;
	font-size:32rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
}

.company-infos .header .position-salary {
	display: block;
	font-size:60rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	margin-top: 10rpx;
}

.company-infos .infos {
	margin-top: 30rpx;
}

.company-infos .infos view {
	display: inline-block;
	font-size:24rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	line-height: 1;
	margin-right: 40rpx;
}

.company-infos .infos .iconfont {
	margin-right: 5rpx;
}

.company-infos .welfare-ul {
	line-height: 1;
	overflow: hidden;
	margin-top: 45rpx;
}

.company-infos .welfare-ul .li {
	border-radius:30rpx;
	border:1rpx solid rgba(101,39,145,1);
	font-size:26rpx;
	font-weight:400;
	color:rgba(132,82,167,1);
	text-align: center;
	line-height: 1;
	padding: 10rpx 30rpx;
	display: inline-block;
	margin-right: 16rpx;
}

.job-describe {
	box-shadow:0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
	border-radius:10rpx;
	display: block;
	overflow: hidden;
	box-sizing: border-box;
	padding: 60rpx;
	margin: 20rpx 30rpx;
}