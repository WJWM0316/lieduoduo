.specialJob .desc {
	margin-top: 10rpx;
	width:338rpx;
	height:40rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	background:#fff;
	border-radius:24rpx;
	font-size:22rpx;
	color:#282828;
  line-height: 1;
}

.specialJob .desc .icon {
	font-size: 24rpx;
  line-height: 1;
	margin-left: 8rpx;
	color: #BC94D7;
}