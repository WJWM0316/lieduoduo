@import '../../../../iconfont.wxss';
.job-detail {
	padding-bottom: 140rpx;
}
.title {
  font-size:28rpx;
  font-weight:500;
  color:rgba(98,98,98,1);
}

.title .icon {
  width: 24rpx;
  height: 28rpx;
  padding: 6rpx 0 0 6rpx;
  background: #EFE9F4;
  display: inline-block;
  box-sizing: border-box;
  margin-right: 21rpx;
}
.title .fan {
  width: 24rpx;
  height: 28rpx;
  border: 2rpx solid #652791;
  box-sizing: border-box;
}

.page-top {
	position: relative;
	padding-top: 20rpx;
}

.page-top .bgImg {
	width: 100%;
	height: 482rpx;
	position: absolute;
	left: 0;
	top: 0;
}

.company-infos {
	box-shadow:0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
	border-radius:10rpx;
	display: block;
	overflow: hidden;
	box-sizing: border-box;
	padding: 60rpx 60rpx;
	background: white;
	padding-bottom: 40rpx;
	position: relative;
	z-index: 1;
	margin: 0 30rpx;
}

.company-infos .header {
	height:102rpx;
	border-radius:20rpx;
	display: flex;
}

.company-infos .header .text {
	flex: 1;
	line-height: 1;
	position: relative;
}

.company-infos .header .img-box {
	width:102rpx;
	height:102rpx;
	border-radius:20rpx;
	overflow: hidden;
}

.company-infos .header image {
	width: 100%;
	height: 100%;
}

.company-infos .header .position-name {
	display: block;
	font-size:32rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	overflow: hidden;
	line-height: 1;
	text-overflow: ellipsis;
	white-space: nowrap;
	width: 300rpx;
}

.company-infos .header .position-salary {
	display: block;
	font-size:60rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	margin-top: 10rpx;
}

.company-infos .infos {
	margin-top: 30rpx;
}

.company-infos .infos view {
	display: inline-block;
	font-size:24rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	line-height: 1;
	margin-right: 40rpx;
}

.company-infos .infos .icon {
	color: #CDCBCF;
	margin-right: 12rpx
}

.company-infos .infos .icon-zhiwei {
	font-size: 28rpx;
}

.company-infos .welfare-ul {
	line-height: 1;
	overflow: hidden;
	margin-top: 34rpx;
}

.company-infos .welfare-ul .li {
	border-radius:30rpx;
	border:1rpx solid rgba(101,39,145,1);
	font-size:26rpx;
	font-weight:400;
	color:rgba(132,82,167,1);
	text-align: center;
	line-height: 1;
	padding: 10rpx 30rpx;
	display: inline-block;
	margin-right: 16rpx;
	margin-top: 16rpx;
}

.job-describe {
	box-shadow:0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
	border-radius:10rpx;
	display: block;
	overflow: hidden;
	box-sizing: border-box;
	padding: 40rpx;
	margin: 20rpx 30rpx;
	position: relative;
	background: white;
}

.tags-ul {
	overflow: hidden;
	margin-top: 40rpx;
}

.tags-ul .li {
	background:rgba(239,233,244,1);
	display: inline-block;
	margin-right: 12rpx;
	text-align: center;
	padding: 10rpx 20rpx;
	font-size:24rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
}

.rich-text {
	font-size:24rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	line-height:1.8;
	margin-top: 20rpx;
	overflow: hidden;
}

.about-company {
	box-shadow:0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
	border-radius:10rpx;
	display: block;
	overflow: hidden;
	box-sizing: border-box;
	padding: 40rpx;
	margin: 0 30rpx;
	background: white;
}

.tab-company-homepage {
	display: flex;
	padding: 40rpx 0;
	overflow: hidden;
	border-bottom:1px dotted rgba(206,215,220,1);
}

.tab-company-homepage .left {
	width:108rpx;
	height:108rpx;
	border-radius:24rpx;
	overflow: hidden;
}

.tab-company-homepage .left image {
	width:108rpx;
	height:108rpx;
}

.tab-company-homepage .right {
	width:108rpx;
	line-height: 108rpx;
	border-radius:24rpx;
	text-align: right;
	color: #BACED8;
}

.tab-company-homepage .content {
	flex: 1;
	margin: 0 25rpx;
	line-height: 1;
}

.tab-company-homepage .company-name {
	font-size:36rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	margin-top: 15rpx;
	max-width: 300rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.tab-company-homepage .infos {
	font-size:26rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	margin-top: 15rpx;
	max-width: 300rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.tab-company-address {
	overflow: hidden;
	border-bottom:1px dotted rgba(206,215,220,1);
	height: 108rpx;
	line-height: 108rpx;
}

.tab-company-address text {
	font-size:26rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	margin-left: 16rpx;
}

.tab-company-address .icon-xiangyou {
	float: right;
	color: #BACED8;
}

.tab-company-address .icon-dizhi {
	color: #CDCBCF;
}

.make-homepage {
	overflow: hidden;
	padding: 50rpx;
	text-align: center;
	position: relative;
}

.make-homepage view {
	display: inline-block;
	font-size:26rpx;
	font-weight:300;
	color:rgba(101,39,145,1);
}

.make-homepage .icon-disejiantou-you {
	vertical-align: middle;
	color: #652791;
	font-size: 26rpx;
}

.make-homepage .collect {
	width:80rpx;
	height:80rpx;
	background:rgba(255,255,255,1);
	box-shadow:0rpx 4rpx 14rpx 0rpx rgba(40,120,255,0.26);
	border-radius:40rpx;
	display: inline-block;
	vertical-align: middle;
	line-height: 80rpx;
	text-align: center;
	font-size: 40rpx;
	position: absolute;
	right: 20rpx;
	top: 50%;
	transform: translateY(-50%);
}

.interview-bar {
  height:138rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -6rpx 20rpx 0rpx rgba(34,56,101,0.08);
  border-radius:28rpx 28rpx 0rpx 0rpx;
  background: white;
  width: 100%;
  position:fixed;
  z-index: 1000;
  left: 0;
  bottom: 0;
  overflow: hidden;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
}

.interview-bar .edit-button {
  width: 250rpx;
  margin-right: 20rpx;
  height:80rpx;
	border-radius:40rpx;
	margin: 10rpx 0;
	margin-left: 12rpx;
	text-align: center;
	line-height: 80rpx;
	font-size:28rpx;
	font-weight:500;
	color:black;
}

.interview-bar .switch-open-button {
  flex: 1;
	height:80rpx;
	background:rgba(101,39,145,1);
	border-radius:40rpx;
	margin: 10rpx 0;
	margin-left: 12rpx;
	text-align: center;
	line-height: 80rpx;
	font-size:28rpx;
	font-weight:500;
	color:rgba(255,255,255,1);
}