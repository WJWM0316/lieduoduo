.job-detail {
	padding-bottom: 160rpx;
	width: 100%;
	overflow: hidden;
	background: #F5F4F7;
	box-sizing: border-box;
	min-height: 100vh;
}
.title {
  font-size:28rpx;
  font-weight:500;
  color:rgba(98,98,98,1);
}

.title .icon {
  width: 24rpx;
  height: 28rpx;
  padding: 6rpx 0 0 6rpx;
  background: #EFE9F4;
  display: inline-block;
  box-sizing: border-box;
  margin-right: 21rpx;
}
.title .fan {
  width: 24rpx;
  height: 28rpx;
  border: 2rpx solid #652791;
  box-sizing: border-box;
}

.page-top {
	position: relative;
	padding-top: 20rpx;
}

.page-top .bgImg {
	width: 100%;
	height: 482rpx;
	position: absolute;
	left: 0;
	top: 0;
}

.company-infos, .specialJob {
	box-shadow:0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
	border-radius:16rpx;
	display: block;
	box-sizing: border-box;
	padding: 60rpx;
	background: white;
	padding-bottom: 40rpx;
	position: relative;
	z-index: 1;
	margin: 0 30rpx;
}
.company-infos.hasSpecail {
	border-radius:16rpx 16rpx 0 0;
}
.company-infos .header {
	height:102rpx;
	border-radius:20rpx;
	display: flex;
}

.company-infos .header .text {
	flex: 1;
	line-height: 1;
	position: relative;
}

.company-infos .header .img-box {
	width:102rpx;
	height:102rpx;
	border-radius:20rpx;
	overflow: hidden;
}

.company-infos .header image {
	width: 100%;
	height: 100%;
}

.company-infos .header .position-name {
	display: block;
	font-size:32rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	overflow: hidden;
	line-height: 36rpx;
	text-overflow: ellipsis;
	white-space: nowrap;
	width: 428rpx;
}
.position-name .jp {
	width:76rpx;
	height:36rpx;
	background:#FF7F4C;
	border-radius:4rpx;
	text-align: center;
	line-height: 36rpx;
	color: #fff;
	font-size:22rpx;
  display: inline-block;
  margin-right: 8rpx;
  transform: translateY(-2rpx);
}
.position-name .jp .icon {
	font-size: 20rpx;
	margin-right: 3rpx;
}
.company-infos .header .position-salary {
	display: block;
	font-size:60rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	margin-top: 10rpx;
}

.company-infos .infos {
	margin-top: 16rpx;
}

.company-infos .infos view {
	display: inline-block;
	font-size:24rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	margin-right: 42rpx;
}

.company-infos .infos .icon {
	color: #CDCBCF;
	margin-right: 10rpx;
	font-size: 27rpx;
}

.company-infos .infos .icon-zhiwei {
	font-size: 28rpx;
}

.company-infos .welfare-ul {
	margin-top: 14rpx;
}

.company-infos .welfare-ul .li {
	border-radius:30rpx;
	border:1rpx solid rgba(101,39,145,1);
	font-size:26rpx;
	font-weight:400;
	color:rgba(132,82,167,1);
	text-align: center;
	line-height: 1;
	padding: 10rpx 30rpx;
	display: inline-block;
	margin-right: 16rpx;
	margin-top: 16rpx;
	line-height: 1;
}

.job-describe {
	box-shadow:0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
	border-radius:16rpx;
	display: block;
	overflow: hidden;
	box-sizing: border-box;
	padding: 40rpx;
	margin: 20rpx 30rpx;
	position: relative;
	background: white;
}

.tags-ul {
	overflow: hidden;
	margin: 40rpx auto 8rpx auto;
	line-height: 1;
}

.tags-ul .li {
	background:rgba(239,233,244,1);
	display: inline-block;
	margin-right: 12rpx;
	margin-bottom: 12rpx;
	text-align: center;
	padding: 0 20rpx;
	font-size:24rpx;
	font-weight:400;
	height: 42rpx;
	line-height: 42rpx;
	color:rgba(101,39,145,1);
}

.rich-text {
	font-size:28rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	line-height:48rpx;
	margin-top: 20rpx;
	overflow: hidden;
}

.about-company, .work-adress {
	box-shadow:0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
	border-radius:16rpx;
	display: block;
	overflow: hidden;
	box-sizing: border-box;
	padding: 40rpx 40rpx 0;
	margin: 0 30rpx;
	background: white;
}
.work-adress {
	margin-bottom: 20rpx;
}
.work-adress .mapBox {
	width: 100%;
	height: 210rpx;
	margin: 40rpx auto 0;
}
.work-adress .map {
	width: 100%;
	height: 100%;
}
.about-company .detail {
	padding: 50rpx 0;
	font-size: 28rpx;
	border-top:1rpx dashed rgba(206,215,220,1);
}

.tab-company-homepage {
	display: flex;
	padding: 40rpx 0;
	overflow: hidden;
	position: relative;
}

.tab-company-homepage .left {
	width:108rpx;
	height:108rpx;
	border-radius:24rpx;
	overflow: hidden;
	position: absolute;
	left: 0;
	top: 40rpx;
}

.tab-company-homepage .left image {
	width:108rpx;
	height:108rpx;
}

.tab-company-homepage .right {
	line-height: 108rpx;
	border-radius:24rpx;
	text-align: right;
	color: #BACED8;
}

.tab-company-homepage .content {
	flex: 1;
	line-height: 1;
	margin-left: 124rpx;
	position: relative;
  text-align: left;
}

.tab-company-homepage .company-name {
	font-size:36rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	margin-top: 15rpx;
	max-width: 450rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.tab-company-homepage .infos {
	font-size:24rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	margin-top: 15rpx;
	max-width: 450rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.tab-company-address {
	overflow: hidden;
	border-top:1px dashed rgba(206,215,220,1);
	min-height: 108rpx;
	line-height: 34rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.address_left {
  display: flex;
  align-items: center;
}
.tab-company-address .adress_txt {
	font-size:26rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	margin-left: 16rpx;
	display: inline-block;
	max-width: 500rpx;
}

.tab-company-address .icon-xiangyou {
	float: right;
	color: #BACED8;
}

.tab-company-address .icon-dizhi {
	color: #CDCBCF;
}

.make-homepage {
	overflow: hidden;
	padding: 50rpx;
	text-align: center;
	position: relative;
}

.make-homepage view {
	display: inline-block;
	font-size:26rpx;
	font-weight:300;
	color:rgba(101,39,145,1);
}

.make-homepage .icon-disejiantou-you {
	color: #652791;
	font-size: 26rpx;
	margin-left: 8rpx;
}

.collect {
	width: 80rpx;
  height: 80rpx;
  background: #fff;
  box-shadow: 0rpx 4rpx 14rpx 0rpx rgba(101,39,145,0.18);
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #8452A7;
  position: fixed;
  right: 20rpx;
  bottom: 164rpx;
  z-index: 10;
}

.interview-bar {
  height:138rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -6rpx 20rpx 0rpx rgba(34,56,101,0.08);
  border-radius:28rpx 28rpx 0rpx 0rpx;
  background: white;
  width: 100%;
  position:fixed;
  z-index: 1000;
  left: 0;
  bottom: 0;
  overflow: hidden;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
}

.interview-bar .edit-button {
  width: 250rpx;
  margin-right: 20rpx;
  height:80rpx;
	border-radius:40rpx;
	margin: 10rpx 0;
	margin-left: 12rpx;
	text-align: center;
	line-height: 80rpx;
	font-size:28rpx;
	font-weight:500;
	color:black;
}

.interview-bar .switch-open-button {
  flex: 1;
	height:80rpx;
	background:rgba(101,39,145,1);
	border-radius:40rpx;
	margin: 10rpx 0;
	margin-left: 12rpx;
	text-align: center;
	line-height: 80rpx;
	font-size:28rpx;
	font-weight:500;
	color:rgba(255,255,255,1);
}

.switch-tips {
	height:150rpx;
	background:rgba(255,255,255,1);
	box-shadow:0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
	border-radius:16rpx;
	margin: 24rpx 30rpx;
	position: relative;
	box-sizing: border-box;
	padding: 40rpx;
}

.switch-tips .icon-disejiantou-you {
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	right: 50rpx;
	color: rgba(101, 39, 145, 1);
}

.switch-tips .h1{
	font-size:32rpx;
	font-weight:500;
	color:rgba(101,39,145,1);
	line-height: 1;
	margin-bottom: 12rpx;
}

.switch-tips .h2{
	font-size:26rpx;
	font-weight:300;
	color:rgba(98,98,98,1);
	line-height: 1;
}

.footer {
	height:128rpx;
	background:rgba(255,255,255,1);
	box-shadow:0rpx -6rpx 20rpx 0rpx rgba(34,56,101,0.08);
	padding: 20rpx 60rpx;
	box-sizing: border-box;
	display: flex;
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 2;
}

.footer .edit{
	height:88rpx;
	background:rgba(239,233,244,1);
	border-radius:44rpx;
	margin-right: 30rpx;
	text-align: center;
	line-height: 88rpx;
	font-size:32rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
	flex: 1
}
.edit.prohibit {
  background: #F5F4F7;
  color: #BCBCBC;
}
.prohibitBox {
  position: fixed;
  bottom: 128rpx;
  left: 0;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  background: #FFFCEF;
  color: #282828;
  font-size:26rpx;
  font-weight:300;
  z-index: 3;
}
.prohibitBox .icon {
  color: #FFDC29;
  margin-right: 12rpx;
}
.footer .share{
	height:88rpx;
	background:rgba(101,39,145,1);
	box-shadow:0rpx 4rpx 12rpx 0rpx rgba(101,39,145,0.38);
	border-radius:44rpx;
	text-align: center;
	line-height: 88rpx;
	font-size:32rpx;
	font-weight:500;
	color:rgba(255,255,255,1);
	width: 354rpx
}

.findMore {
	height: 160rpx;
	overflow: hidden;
	padding: 42rpx 36rpx 42rpx 40rpx;
	box-sizing: border-box;
	background:#fff;
	box-shadow:0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
	border-radius:16rpx;
	margin:20rpx 30rpx 0;
	position: relative;
}
.findMore::after {
	content: '';
	width:4rpx;
	height:80rpx;
	background:rgba(132,82,167,1);
	position: absolute;
	top: 50%;
	margin-top: -40rpx;
	left: 0;
}
.findMore .left {
	width: 352rpx;
	float: left;
}
.findMore .left .title {
	font-size:34rpx;
	font-weight:700;
	color:#282828;
	line-height:40rpx;
}
.findMore .left .msg {
	font-size: 0;
	margin-top: 6rpx;
  display: flex;
  align-items: center;
}
.findMore .left .msg .desc, .findMore .left .msg .name {
  font-size:24rpx;
	font-weight:300;
	color:#626262;
	line-height:30rpx;
  display: inline-block;
}
.findMore .left .msg .name {
	max-width: 144rpx;
	overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
	color: #8452A7;
}
.findMore .right {
	float: right;
	padding: 6rpx 0;
}
.findMore .right .img {
	width: 64rpx;
	height: 64rpx;
	border-radius: 50%;
	margin-left: -10rpx;
	display: inline-block;
}

.notfound {
	box-shadow:0rpx 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
	border-radius:16rpx;
	display:block;
	box-sizing:border-box;
	padding:88rpx;
	background:white;
	position:relative;
	z-index:1;
	margin:20rpx 30rpx
}
.notfound .pic{
	width:340rpx;
	height:240rpx;
	margin:0 auto 40rpx auto;
	display:block;
}

.notfound .h10{
	text-align: center;
	font-size: 46rpx;
	color: #652791;
	font-weight: 700;
	line-height: 1;
	margin-bottom: 16rpx;
}

.notfound .h11{
	text-align: center;
	font-size: 30rpx;
	color: #5C565D;
	line-height: 1;
	font-weight: 300;
}

.specialJob {
	padding: 0;
	background: url('https://attach.lieduoduo.ziwork.com/front-assets/images/bg_job_24hbanner@2x.png');
	background-size: 100% 100%;
	height: 150rpx;
	position: relative;
  border-radius: 0 0 16rpx 16rpx;
}
.rest {
	width:90rpx;
	font-size:22rpx;
	font-weight:300;
	color:#FFFFFF;
	line-height:28rpx;
	position: absolute;
	top: 35rpx;
	left: 130rpx;
}
.rest .num {
	font-size:48rpx;
	font-weight:700;
	color:rgba(255,220,41,1);
	line-height:46rpx;
}
.rest .txt {
	font-size:30rpx;
	color:rgba(255,255,255,1);
	line-height:40rpx;
}
.timeBox {
  width: 338rpx;
	position: absolute;
	top: 30rpx;
	right: 40rpx;
  text-align: center;
}
.timeBox .time {
	font-size:24rpx;
	height: 40rpx;
	font-weight:bold;
	color:#fff;
	line-height:40rpx;
}
.timeBox .dateNum {
	padding: 0 6rpx;
  margin: 0 6rpx;
	min-width: 22rpx;
	height: 40rpx;
