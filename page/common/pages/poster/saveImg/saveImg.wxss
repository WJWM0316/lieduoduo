
.save {
	padding: 16rpx 85rpx 16rpx;
	position: fixed;
	width: 100%;
	box-sizing: border-box;
	left: 0;
	bottom: 0;
	background: rgba(255,255,255,0.8);
}
.saveBtn {
	padding: 0;
	background: none;
	border: none;
}
.saveBtn::after {
	display: none;
}
.saveBtn .yellow, .saveBtn .violet{
	width: 100%;
	height: 85rpx;
	line-height: 85rpx;
	background: #FFDC29;
	text-align: center;
	font-size:30rpx;
	font-weight:400;
	color:#282828;
	border-radius: 44rpx;
	position: relative;
	z-index: 2;
}
.saveBtn .violet {
	background: #652791;
	margin-top: -77rpx;
	z-index: 1;
}
.img {
	width: 100%;
}

.shareBox {
	width: 100%;
	height: 140rpx;
	background: url('https://attach.lieduoduo.ziwork.com/front-assets/wantYou/wantYouBtn.png') no-repeat;
	background-size: 100% auto;
	position: fixed;
	left: 0;
	bottom: 0;
	display: flex;
	align-items: center;
	justify-content: center;
}

.shartBtn, .saveBtn {
	flex: 1;
	height: 84rpx;
  overflow: visible;
}