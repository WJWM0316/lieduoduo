@import '../../../../iconfont.wxss';

.ul-tab-bar {
  display: flex;
  line-height: 80rpx;
  margin: 0 30rpx;
}

.ul-tab-bar .li {
  flex-grow: 1;
  font-size:28rpx;
  font-weight:400;
  color:rgba(188,188,188,1);
  text-align: center;
  position: relative;
  background:rgba(243,245,248,1);
}

.ul-tab-bar .li:first-child {
  border-top-left-radius: 10rpx;
}

.ul-tab-bar .li:last-child {
  border-top-right-radius: 10rpx;
}

.ul-tab-bar .li:before {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -30rpx;
  width: 0;
  height: 0;
  border-width:16rpx;
  border-style: solid;
  border-color: #EFE9F4 transparent transparent transparent;
  display: block;
  content: '';
  opacity: 0;
  visibility: hidden;
  transition: all ease .2s;
  z-index: 2;
}

.ul-tab-bar .active {
  font-weight:500;
  color:rgba(40,120,255,1);
  background: #EFE9F4;
  pointer-events: none;
  font-size:28rpx;
  font-weight:500;
  color:rgba(101,39,145,1);
}

.ul-tab-bar .active:before {
  opacity: 1;
  visibility: visible;
}

.ul-tab-bar .active:after {
  opacity: 1;
  visibility: visible;
}

