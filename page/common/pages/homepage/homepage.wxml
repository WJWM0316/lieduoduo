<view class="homepage">
	<navbar title="{{companyInfos.companyShortname}}" background="#fff" color="#22292C" showHome="{{true}}"></navbar>

	<view hidden="{{!hasReFresh}}">
    <refreshStatus></refreshStatus>
  </view>

	<view class="banner">
		<image class="bgImg" src="{{cdnImagePath}}company_banner.png" mode="aspectFill"></image>
		<view class="box">
			<view class="company-logo">
				<image class="bgImg" src="{{companyInfos.logoInfo.smallUrl}}" mode="aspectFit"></image>
			</view>
			<view class="company-name">{{companyInfos.companyShortname}}</view>
			<view class="infos">{{companyInfos.industry}} | {{companyInfos.financingInfo}} | {{companyInfos.employeesInfo}}</view>
		</view>
		<shareBtn></shareBtn>
	</view>
	
	<view class="ul-tab-bar {{isFixed ? 'fixed-bar' : ''}}" style="top: {{navH}}px">
		<view class="li {{tab === 'about' ? 'active' : ''}}" bindtap="onTabClick" data-tab="about">关于我们</view>
		<view class="li {{tab === 'recruitment' ? 'active' : ''}}" bindtap="onTabClick" data-tab="recruitment">在招职位({{companyInfos.positionNum}})</view>
	</view>
