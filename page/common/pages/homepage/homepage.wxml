<view class="homepage">
	<navbar title="公司主页" showHome="{{true}}"></navbar>
	<view class="banner">
		<image class="bgImg" src="../../../../images/company_banner.png" mode="aspectFill"></image>
		<view class="box">
			<view class="company-logo"></view>
			<view class="title">{{companyInfos.companyName}}</view>
			<view class="infos">{{companyInfos.industry}} | {{companyInfos.financing}} | {{companyInfos.employees}}人</view>
		</view>
		<shareBtn></shareBtn>
	</view>
	
	<view class="ul-tab-bar">
		<view class="li {{tab === 'about' ? 'active' : ''}}" bindtap="onTabClick" data-tab="about">关于我们</view>
		<view class="li {{tab === 'recruitment' ? 'active' : ''}}" bindtap="onTabClick" data-tab="recruitment">在招职位({{companyInfos.positionNum}})</view>
	</view>
	<block wx:if="{{tab === 'about'}}">
		<view class="homepage-team-box">
			<view class="title">
				<view class="icon"> <view class="fan"></view> </view> 招聘团队
			</view>
			<view class="ul">
				<view class="li" wx:for="{{ recruitersList }}" wx:key="{{index}}" wx:for-item="recruiter" bindtap="bindMain" data-uid="{{recruiter.uid}}">
					<view class="img-box">
						<image src="{{recruiter.avatar.smallUrl}}"></image>
						<i class="certification-icon">V</i>
					</view>
					<view class="content">
						<view class="row-one">
							<view class="username">{{recruiter.name}}</view>
							<view class="recruitment-number" wx:if="{{recruiter.positionNum}}">{{recruiter.positionNum}} 个在招职位</view>
						</view>
						<view class="row-two">{{recruiter.position}}</view>
						<view class="row-three">{{recruiter.signature ? recruiter.signature : '测试数据'}}</view>
					</view>
				</view>
			</view>
			<view class="footer">
				<view class="button">查看全部招聘官<i class="icon iconfont icon-xiangyou"></i></view>
			</view>
		</view>

		<view class="introduction">
			<view class="title">
				<view class="icon"> <view class="fan"></view> </view> 公司介绍
			</view>
			<swiper
				class="swiper-block"
				previous-margin="40rpx"
				next-margin="40rpx"
				current="0"
				bindchange="swiperChange"
				wx:if="{{companyInfos.album.length}}"
				autoplay="{{autoplay}}">
				<swiper-item class="swiper-item" wx:for="{{companyInfos.album}}" wx:key="{{index}}">
					<image mode="aspectFill" class="slide-image {{swiperIndex == index ? 'active' : ''}}"/>
				</swiper-item>
			</swiper>
			<view class="company-detail">
				<view class="p">{{companyInfos.intro}}</view>
			</view>
		</view>

		<view class="production-box" wx:if="{{companyInfos.product.length}}">
			<view class="title">
				<view class="icon"> <view class="fan"></view> </view> 产品介绍
			</view>
			<view class="ul">
				<view class="li" wx:for="{{[1,2]}}" wx:key="{{index}}">
					<view class="img-box"></view>
					<view class="content">
						<view class="row-one">
							<view class="username">小灯塔</view>
							<view class="recruitment-number">职场分享社区</view>
						</view>
						<view class="row-two">小灯塔创始人、CEO</view>
					</view>
				</view>
			</view>
		</view>
		
		<view class="company-address" wx:if="{{companyInfos.address.length >= 0}}">
			<view class="title">
				<view class="icon"> <view class="fan"></view> </view> 公司地址
			</view>
			<view class="map">
				<map
				  id="map"
				  longitude="113.324520"
				  latitude="23.099994"
				  scale="14"
				  bindcontroltap="controltap"
				  bindmarkertap="markertap"
				  bindregionchange="regionchange"
				  show-location></map>
			</view>
			<view class="footer" data-route="map" bindtap="routeJump">
				<i class="icon iconfont icon-dizhi"></i>
				广州天河区天河北路698号1606
				<i class="icon iconfont icon-xiangyou"></i>
			</view>
		</view>
		
		<view class="company-website" wx:if="{{companyInfos.website}}">
			<view class="title">
				<view class="icon"> <view class="fan"></view> </view> 公司官网
			</view>
			<view class="link-box">
				<view class="link">{{companyInfos.website}}</view>
				<view class="button" bindtap="copyLink">复制</view>
			</view>
		</view>
	</block>
	<block wx:else>
		<view class="job-list">
			<jobList personality="jobItem" list="{{jobList}}" list-type="interview" current-tab="all"></jobList>
		</view>
	</block>
</view>