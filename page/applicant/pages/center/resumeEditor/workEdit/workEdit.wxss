/* page/applicant/pages/center/resumeEditor/aimsEdit/aimsEdit.wxss */
@import '../../../../../../iconfont.wxss';
.warp{
  box-sizing: border-box;
  width: 100%;
  padding: 0 40rpx;
}
.commont{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 122rpx;
  font-size: 28rpx;
  color: #353943;
  border-bottom: 1rpx solid #E8E9EB;
}
.commont .result{
  display: flex;
  align-items: center;
  justify-content: center;
}
.commont .result input{
  text-align: right;
}
.title{
  font-size: 28rpx;
  color: #353943;
}
.title text{
  color: red;
  line-height: 122rpx;
  margin-right: 10rpx;
}
.salary{}

/*工作内容*/
.textArea{
  width: 100%;
  /*height: 150rpx;*/
  background-color: #fff;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  box-sizing: border-box;
  line-height: 36rpx;
  border: 1rpx solid #E8E9EB;
}
.textArea textarea{
  width: 100%;
  height: 150rpx;
}
.placeholder{
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: #BCBCBC;
}
.bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #652791;
}
.bottom .example i{
  margin-right: 12rpx;
}
.popups{
  margin-top: 24rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.popups .top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.popups .top image{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  background-color: #ccc;
}
.popups .top .nameBox{
  display: flex;
  align-items: center;
  color: #282828;
  font-weight: 500;
}
.popups .top .change{
  color: #652791;
}
.popups .top .change i{
  margin-right: 9rpx;
}
.popups .content{
  position: relative;
  padding: 24rpx 30rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #626262;
  line-height: 36rpx;
  background-color: #FFF;
  border-radius: 10rpx;
  border:1px solid rgba(232,233,235,1);
}
.popups .content .corner{
  width: 32rpx;
  height: 21rpx;
  overflow: hidden;
  position: absolute;
  top: -20rpx;
  left: 50rpx;
  z-index: 1;
}
.popups .content .corner image{
 width: 100%; 
 height: 100%;
}
.btn{
  width: 100%;
  display: flex;
  margin-top: 70rpx;
  align-items: center;
  justify-content: center;
  padding-bottom: 30rpx;
  /*position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);*/
}
.save{
  display: inline-block;
  padding: 28rpx 92rpx;
  background-color: #652791;
  border-radius:48rpx;
  margin: 0 auto;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  font-weight: 400;
  margin: 0 20rpx;
  white-space: nowrap;
}
.add{
  box-sizing: border-box;
  width: 550rpx;
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
}
.delete{
  background-color: #BCBCBC;
}