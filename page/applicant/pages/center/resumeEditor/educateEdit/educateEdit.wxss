/* page/applicant/pages/center/resumeEditor/aimsEdit/aimsEdit.wxss */
@import '../../../../../../iconfont.wxss';
.warp{
  box-sizing: border-box;
  width: 100%;
  padding: 0 40rpx;
}
.commont{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 122rpx;
  font-size: 28rpx;
  color: #353943;
  border-bottom: 1px solid #E8E9EB;
}
.commont .result{
  display: flex;
  align-items: center;
  justify-content: center;
}
.commont .result input{
  text-align: right;
}
.commont text{
  color: red;
  line-height: 122rpx;
  margin-right: 10rpx;
}
.textArea{
  width: 100%;
  /*height: 150rpx;*/
  background-color: #fff;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  box-sizing: border-box;
  line-height: 36rpx;
  border: 1rpx solid #E8E9EB;
}
.textArea textarea{
  width: 100%;
  height: 150rpx;
}
.title{
  line-height: 122rpx;
  font-size: 28rpx;
  color: #353943;
}
.title text{
  color: red;
  line-height: 122rpx;
  margin-right: 10rpx;
}
.btn{
  width: 100%;
  display: flex;
  margin-top: 70rpx;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
}
.save{
  display: inline-block;
  padding: 28rpx 92rpx;
  background-color: #652791;
  border-radius:48rpx;
  margin: 0 auto;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  font-weight: 400;
  margin: 0 20rpx;
  white-space: nowrap;
}
.add{
  position: fixed;
  bottom: 30rpx;
  width: 550rpx;
  left: 50%;
  transform: translateX(-50%);
}
.delete{
  background-color: #BCBCBC;
}
