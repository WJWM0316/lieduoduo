<view class="warp">
  <view class="header">
    <image class="headerBg" src="../../../../../images/pic_bg_new@3x.png"></image>
    <text class="title">开启有趣的求职之旅</text>
    <text class="subtitle">真实可靠的职场形象总能碰到机遇</text>
    <avatarCut class="avatar" avatar="avatar" src="{{avatar.url}}"></avatarCut>
  </view>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="gender" bindtap="chooseGender">
      <view class="{{gender === '1'? 'active' : ''}}" data-gender="1">男</view>
      <view class="{{gender === '2'? 'active' : ''}}" data-gender="2">女</view>
    </view>
    <view class="name">
      <input name="name" bindblur="getValue" data-type="name" placeholder="请输入姓名" value="{{name}}"/>
    </view>
    <view class="name">
      <input name="position" bindblur="getValue" data-type="position" value="{{position}}" placeholder="请输入职位名称" />
    </view>
    <view class="time">
      <myPicker class="myPicker" setResult="{{workTimeDesr}}" pickerType="workTime" placeholderStyle="color: #BCBCBC" bindresultevent="getresult"></myPicker>
    </view>
    <view class="btn-area">
      <button bindtap="submit"><i class="icon iconfont icon-xiayibu"></i></button>
    </view>
  </form>
</view>