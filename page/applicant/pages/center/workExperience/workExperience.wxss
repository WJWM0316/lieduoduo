/* page/applicant/pages/center/secondStep/secondStep.wxss */
@import '../../../../../iconfont.wxss';
.header{
  box-sizing: border-box;
  padding-top: 185rpx;
  position: relative;
  width: 100%;
  height: 482rpx;
}
.headerBg{
  width: 100%;
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
}
.header .title{
  text-align: center;
  display: block;
  font-size:56rpx;
  font-weight:600;
  color: #FFFFFF;
}
.header .subtitle{
  text-align: center;
  display: block;
  margin-top: 17rpx;
  font-size:26rpx;
  font-weight:400;
  color: #FFF;
}
.commont{
  border-radius: 50rpx;
  height: 88rpx;
  width: 550rpx;
  background-color: #E8E9EB;
  text-align: center;
  margin: 0 auto;
  margin-top: 56rpx;
  font-size: 32rpx;
}
.commont input{
  box-sizing: border-box;
  padding: 0 20rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}
.timeBox{
  color: #626262;
  margin-top: 32rpx;
  text-align: center;
}
.startTime,
.endTime{
  width: 240rpx;
  height: 88rpx;
  background-color: #E8E9EB;
  border-radius: 50rpx;
  display: inline-block;
  border-radius: 50rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 400;
}
.btn-area button{
  margin-top: 128rpx;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: none;
  outline: none;
  line-height: 128rpx;
  text-align: center;
  box-shadow:0px 20px 18px 0px rgba(255,220,41,0.2);
  background-color: #FFDC29;
}
