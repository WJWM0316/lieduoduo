<view class='mine'>
  <navbar title="我的" background="transparent" title="我的" color="#fff"></navbar>
  <view hidden="{{!hasReFresh}}">
    <refreshStatus></refreshStatus>
  </view>
  <image class="bgImg" mode="aspectFill" src="{{cdnImagePath}}mine_job_hunter.png"></image>
  <view style="height: 24rpx"></view>
  <form bindsubmit="formSubmit" report-submit='{{true}}'>
    <view class="floating-box">
  		<view class="header">
  			<view class="content" wx:if='{{myInfo.uid}}'>
  				<view class="realname">{{myInfo.name}}</view>
  				<view class="degree-name" wx:if="{{myInfo.lastCompanyName}}">{{myInfo.lastCompanyName}} | {{myInfo.lastPosition}}</view>
          <view class="experience">{{myInfo.workAgeDesc}}<text wx:if="{{myInfo.workAgeDesc !== '在校生'}}">经验</text> | {{myInfo.age ? myInfo.age + '岁 | ' : ''}} {{myInfo.degreeDesc}}</view>
  			</view> 
        <view class="content" wx:if='{{!myInfo.uid && hasLogin}}'>
  				<view class="realname">简历未完善</view>
  				<text class="degree-name directions">你与offer之间还差一份简历 \n 快去完善吧~</text>
  			</view>

        <view class="content" wx:if='{{!hasLogin}}'>
          <view class="realname">未登录</view>
          <text class="degree-name directions">登录可后使用完整功能 \n 快去登录吧~</text>
        </view>
  			<image class="img-box" src="{{myInfo.avatar.url}}"></image>
  		</view>

      <view class='edit-box' wx:if='{{myInfo.uid}}'>
        <view class='left-text'>{{myInfo.jobStatusDesc || "待完善"}}</view>
        <view class='right-edit'>
          <text class='progress-rate'>完善度 {{myInfo.resumeCompletePercentageDesc}}</text>
          <button class='edit-btn clear-style' form-type="submit" bindtap='toEdit'>
            <i class="icon iconfont icon-bianji"></i>
            <text class='edit-resume'>编辑简历</text>
          </button>
        </view>
      </view>
      <button class="share-resume" form-type="submit" wx:if='{{!myInfo.uid && hasLogin}}' bindtap='completeResume'>立即完善简历 <i class="icon iconfont icon-xiangyou"></i></button>
      <button class="share-resume" form-type="submit" wx:if='{{!hasLogin}}' bindtap='login'>立即登录 <i class="icon iconfont icon-xiangyou"></i></button>
  		<block wx:if="{{myInfo.uid}}">
        <button open-type="share" form-type="submit" class="share-resume clear-style">发简历</button>
        <button class="save-resume-pic clear-style" form-type="submit" bindtap="jump" data-type="poster">保存简历到相册</button>
      </block>
  	</view>

    <!-- bottom -->
    <view class="entry-list">
  		<view class="li" bindtap="jump" data-type="scanCode" wx:if='{{hasLogin}}'>
  			<view>
          <i class="icon iconfont icon-fujian"></i>
          <view class="text">附件简历</view>
        </view>
  			<view class='arrow-box'>
          <view class="text2 {{resumeAttach.vkey ? 'gray' : 'appurtenance'}}"> {{resumeAttach.vkey ? '附件已上传' : '上传附件'}} </view>
          <i class="icon iconfont icon-xiangyou"></i>
        </view>
  		</view>
  		<!-- <view class="li">
  			<view>
          <i class="icon iconfont icon-ganxingqu"></i>
          <view class="text">感兴趣的</view>
        </view>
  			<view class='arrow-box'>
          <i class="icon iconfont icon-xiangyou"></i>
        </view>
  		</view> -->
  		<view class="li" bindtap="online">
  			<view>
          <i class="icon iconfont icon-kefu"></i>
          <view class="text">联系客服</view>
        </view>
  			<view class='arrow-box'>
          <i class="icon iconfont icon-xiangyou"></i>
        </view>
  		</view>
  		<view class="li" bindtap="call">
  			<view>
          <i class="icon iconfont icon-dianhua"></i>
          <view class="text">客服电话</view>
        </view>
        <view class='arrow-box'>
          <view class="text2">020-61279889</view>
          <i class="icon iconfont icon-xiangyou"></i>
        </view>
  		</view>
  		<view class="li" bindtap="jump" data-type="settings">
  			<view>
          <i class="icon iconfont icon-shezhi"></i>
  			  <view class="text">账号设置</view>
        </view>
  			<view class='arrow-box'>
          <i class="icon iconfont icon-xiangyou"></i>
        </view>
  		</view>
  	</view>
	<!-- <view class="copy-right">
		<view class="li">使用帮助</view>
		<view class="li">用户协议</view>
		<view class="li">意见反馈</view>
	</view> -->
  </form>
</view>
<bindPhone hide="{{hideBind}}"></bindPhone>
