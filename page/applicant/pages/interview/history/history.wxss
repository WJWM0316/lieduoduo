.ul {
  margin: 52rpx 30rpx;
}

.ul .li {
  background:rgba(255,255,255,1);
  box-shadow:0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
  border-radius:10rpx;
  margin-bottom: 44rpx;
  position: relative;
  padding-bottom: 5rpx;
}

.ul .li .row-one {
  display: flex;
  align-items: center;
  padding: 22rpx 0 54rpx 0;
  position: relative;
  border-bottom: 1px dotted #BACED8;
  margin: 0 28rpx 28rpx;
}

.ul .li .img-box {
  width:120rpx;
  height:120rpx;
  background:red;
  box-shadow:0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
  border-radius:50%;
  position: absolute;
  top: -20rpx;
  left: 0;
  border: 4rpx solid white;
  box-sizing: border-box;
}

.ul .li .img-box image{
  width: 100%;
  height: 100%;
}

.ul .li .content {
  margin-left: 144rpx;
  flex: 1;
}

.ul .li .header {
  max-width:500rpx;
  height:36rpx;
  line-height:36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
}

.ul .li .header .name {
  font-size:36rpx;
  font-weight:600;
  color:rgba(40,40,40,1);
  display: inline-block;
  vertical-align: top;
}

.ul .li .degree:before {
  background: #282828;
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  display: block;
  content: '';
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}

.ul .li .header .degree{
  font-size:28rpx;
  font-weight:400;
  color:rgba(40,40,40,1);
  position: relative;
  display: inline-block;
  padding-left: 30rpx;
  vertical-align: top;
}

.ul .li .infos1 {
  display: inline-block;
  max-width:340rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ul .li .infos2 {
  max-width:490rpx;
  height:26rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(98,98,98,1);
  line-height:26rpx;
  margin-top: 14rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ul .li .time {
  font-size:24rpx;
  font-weight:400;
  color:#929292;
  display: inline-block;
  float: right;
}

.ul .li .icon {
  color: #BACED8;
  margin-right: 16rpx;
  font-size: 32rpx;
}

.ul .li .row-two, .ul .li .row-three {
  max-width:calc(100% - 56rpx);
  line-height: 1;
  font-size:26rpx;
  font-weight:400;
  color:#626262;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 28rpx;
  padding-bottom: 26rpx;
}