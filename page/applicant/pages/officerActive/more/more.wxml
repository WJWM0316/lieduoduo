<view class="more">
  <navbar title="发现更多招聘官" color="#000000" background="#FFFFFF"></navbar>
  <view class='tabBar'>
    <text bindtap='cutover' data-tab = "all" class='{{tab === "all"? "active" : ""}}'>总榜单</text>
    <text bindtap='cutover' data-tab = "city" class='{{tab === "city"? "active" : ""}}'>城市榜单</text>
    <text bindtap='cutover' data-tab = "office" class='{{tab === "office"? "active" : ""}}'>职位榜单</text>
  </view>
  <view class='childTabBar' wx:if='{{tab !== "all"}}'>
    <text wx:for='{{tab === "city"? cityLabel : jobLabel}}' bindtap='toggle' wx:key="{{index}}" data-nowIndex='{{index}}' data-item='{{item}}' class ='{{index === nowIndex? "nowChildActive" : ""}} {{index === 0 && nowIndex === 0? "firstChildActive" : ""}} {{index === childTabList.length - 1 && nowIndex === childTabList.length - 1? "lastChildActive" : ""}}'>{{item.name}}</text>
  </view>
  
  <scroll-view
    class="scrollView {{tab !== 'all'? 'bigTab' : ''}}"
    scroll-y='true'
    bindscroll="scroll"
    enable-back-to-top='true'
    bindscrolltolower='loadNext'
  >
  <!-- 前3名 -->
    <view class="topicBox">
       <view class="topicList" wx:for="{{list}}" wx:key="{{index}}" wx:if="{{index < 3}}" data-uid="{{item.id || item.uid}}" bindtap="toRecruitment">
        <view class='headIMg {{index === 1? "first" : ""}}'>
          <image src="{{item.avatar.smallUrl}}"></image>
          <view class='icon'>
            <image wx:if="{{index === 1}}" src="{{cdnImagePath}}icon_no1.png" />
            <image wx:if="{{index === 0}}" src="{{cdnImagePath}}icon_no2.png" />
            <image wx:if="{{index === 2}}" src="{{cdnImagePath}}icon_no3.png" />
          </view>
        </view>
        <text class="name">{{item.name}}</text>
        <text class="title">招聘主管</text>
        <view class="influence">
          <text>影响力</text>
          <text class="num">{{item.influence}}</text>
        </view>
      </view> 
    </view>
    <!-- 第三名之后的数据 -->
    <rankingTab wx:for="{{list}}" wx:key="{{index}}" item="{{item}}" index="{{index}}" wx:if="{{index > 3}}"></rankingTab>
  </scroll-view>
</view>