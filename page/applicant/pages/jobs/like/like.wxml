<view class="like">
	<navbar title="我感兴趣" background="#FFFFFF" color="#22292C" showBackBtn="{{true}}"></navbar>
	<view class="office-status-bar" style="top: {{navH}}px">
		<view class="item {{tab === 'positionList' ? 'active' : ''}}" bindtap="onClickTab" data-tab="positionList">机会</view>
  	<view class="item {{tab === 'recruiterList' ? 'active' : ''}}" bindtap="onClickTab" data-tab="recruiterList">招聘官</view>
	</view>

	<view class="ul" hidden="{{tab === 'recruiterList'}}">
		<view hidden="{{!hasReFresh}}">
			<refreshStatus></refreshStatus>
		</view>
		<view wx:for="{{positionList.list}}" wx:key="{{index}}" class="item" wx:for-item="item">
			<slide-view width="750" height="180" slide-width="300">
				<view slot="left" class="content">
					<view class="li">
						<view class="img-box">
							<image class="img" src="{{item.companyInfo.logoInfo.smallUrl}}" mode="aspectFit"></image>
						</view>
						<view class="content">
							<view class="row-one">
								<view class="name">{{item.recruiterInfo.name}}</view>
								<view class="mix">{{item.workExperienceName}}·{{item.educationName}}·{{item.emolumentMin}}k-{{item.emolumentMax}}k</view>
							</view>
							<view class="row-two">
								{{item.companyInfo.companyShortname}} | {{item.positionName}}
							</view>
						</view>
					</view>
				</view>
				<view slot="right" class="button-box">
					<view class="button" bindtap="deletePosition" data-index="{{index}}">删除</view>
				</view>
			</slide-view>
		</view>
		<bottomStatus status="{{onBottomStatus}}" listData="{{positionList.list}}" desc="没有更多内容了~" marginTop="{{0}}" >
			<button class="jump" bindtap="jump">发现更多职业机会</button>
		</bottomStatus>
	</view>

	<view class="ul" hidden="{{tab === 'positionList'}}">
		<view hidden="{{!hasReFresh}}">
			<refreshStatus></refreshStatus>
		</view>
		<view wx:for="{{recruiterList.list}}" wx:key="{{index}}" class="item" wx:for-item="item">
			<slide-view width="750" height="180" slide-width="300">
				<view slot="left" class="content">
					<view class="li">
						<view class="img-box">
							<image class="img" src="{{item.companyInfo.logoInfo.smallUrl}}" mode="aspectFit"></image>
						</view>
						<view class="content">
							<view class="row-one">
								<view class="name">{{item.recruiterInfo.name}}</view>
								<view class="mix">{{item.workExperienceName}}·{{item.educationName}}·{{item.emolumentMin}}k-{{item.emolumentMax}}k</view>
							</view>
							<view class="row-two">
								{{item.companyInfo.companyShortname}} | {{item.positionName}}
							</view>
						</view>
					</view>
				</view>
				<view slot="right" class="button-box">
					<view class="button" bindtap="deleteRecruiter" data-index="{{index}}">删除</view>
				</view>
			</slide-view>
		</view>
		<bottomStatus status="{{onBottomStatus}}" listData="{{recruiterList.list}}" desc="没有更多内容了~" marginTop="{{0}}" >
			<button class="jump" bindtap="jump">发现更多招聘官</button>
		</bottomStatus>
	</view>
</view>