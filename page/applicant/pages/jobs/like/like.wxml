<view class="like">
	<navbar title="感兴趣的" background="#FFFFFF" color="#22292C" showBackBtn="{{true}}"></navbar>
	<view class="office-status-bar" style="top: {{navH}}px">
		<view class="item {{tab === 'positionList' ? 'active' : ''}}" bindtap="onClickTab" data-tab="positionList">机会</view>
  	<view class="item {{tab === 'recruiterList' ? 'active' : ''}}" bindtap="onClickTab" data-tab="recruiterList">面试官</view>
	</view>
	
	<view hidden="{{!hasReFresh}}">
		<refreshStatus></refreshStatus>
	</view>

	<view class="ul" hidden="{{tab === 'recruiterList'}}">
		<form bindsubmit="formSubmit" report-submit='{{true}}'> 
			<button
				form-type="submit" 
				class="formIdBtn"
				data-positionId="{{item.id}}"
				bindtap="routeJump"
				wx:for="{{positionList.list}}"
				wx:for-item="item"
				wx:key="{{index}}">
				<view class="item4">
					<view class="row-one">
						<view class="position">{{item.positionName}}</view>
						<view class="salary">12K~20K</view>
					</view>
					<view class="row-two">
						<view class="address">{{item.city}}{{item.district}}</view>
						<view class="experience">{{item.workExperienceName}}</view>
						<view class="degress">{{item.educationName}}</view>
					</view>
					<view class="row-three">{{item.companyInfo.companyShortname}} | {{item.companyInfo.financingInfo}}</view>
					<view class="row-four">
						<view class="img-box">
							<image src="{{item.recruiterInfo.avatar.smallUrl}}" mode="aspectFill" class="avatar"></image>
							<image src="{{cdnImagePath}}sign1.png" mode="aspectFill" class="sign"></image>
						</view>
						<view class="name-position">{{item.recruiterInfo.name}} · {{item.recruiterInfo.position}}</view>
						<view class="logo-box">
							<image src="{{item.companyInfo.logoInfo.smallUrl}}" mode="aspectFill" class="logo"></image>
						</view>
					</view>
				</view>
			</button>
		</form>
		<bottomStatus status="{{onBottomStatus}}" listData="{{positionList.list}}" desc="没有更多内容了~" marginTop="{{0}}" >
			<button class="jump" bindtap="jump">发现更多职业机会</button>
		</bottomStatus>
	</view>

	<view class="ul" hidden="{{tab === 'positionList'}}">
		<form bindsubmit="formSubmit" report-submit='{{true}}'> 
			<button
				form-type="submit" 
				class="formIdBtn"
				data-uid="{{item.uid}}"
				bindtap="routeJump"
				wx:for="{{recruiterList.list}}"
				wx:for-item="item"
				wx:key="{{index}}">
				<view class="item3">
					<view class="img-box">
						<image class="avatar" src="{{item.avatar.smallUrl}}" mode="aspectFit"></image>
						<image src="{{cdnImagePath}}sign1.png" mode="aspectFill" class="sign" wx:if="{{item.identityAuth}}"></image>
					</view>
					<view class="content">
						<view class="row-one">
							<view class="name">{{item.name}}</view>
							<view class="mix">{{item.position}}</view>
						</view>
						<view class="row-two">
							<view class="company">
								<i class="icon iconfont icon-gongsi"></i>{{item.companyShortname}}
							</view>
		          <view class="position" wx:if="{{item.positionNum}}">
		          	<i class="icon iconfont icon-zhiwei"></i>
		          	<text class="num">{{item.positionNum}}</text>个职位
		          </view>
						</view>
					</view>
				</view>
			</button>
		</form>
		<bottomStatus status="{{onBottomStatus}}" listData="{{recruiterList.list}}" desc="没有更多内容了~" marginTop="{{0}}" >
			<button class="jump" bindtap="jump">发现更多面试官</button>
		</bottomStatus>
	</view>
</view>