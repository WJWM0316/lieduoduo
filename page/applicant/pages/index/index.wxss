.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  display: block;
}

.more{
  background-color: #FFFFFF;
  width: 690rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  box-shadow:0px 8px 22px 0px rgba(34,56,101,0.08);
  margin-bottom: 36rpx;
  margin-top: -117rpx;
}

.applicant-index .index-bannar image {
  width: 100%;
  display: block;
}

.applicant-index .ul-tab-bar {
  display: flex;
  line-height: 80rpx;
  border-bottom: 1rpx solid #BACED8;
}

.applicant-index .ul-tab-bar .li {
  flex-grow: 1;
  font-size:28rpx;
  font-weight:400;
  color:rgba(188,188,188,1);
  text-align: center;
  position: relative;
  background:rgba(243,245,248,1);
}

.applicant-index .ul-tab-bar .li:before {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -34rpx;
  width: 0;
  height: 0;
  border-width: 20rpx;
  border-style: solid;
  border-color: rgba(228,238,255,1) transparent transparent transparent;
  display: block;
  content: '';
  opacity: 0;
  visibility: hidden;
  transition: all ease .4s;
  z-index: 1;
}

.applicant-index .ul-tab-bar .li:after {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -36rpx;
  width: 0;
  height: 0;
  border-width: 20rpx;
  border-style: solid;
  border-color: #BACED8 transparent transparent transparent;
  display: block;
  content: '';
  opacity: 0;
  visibility: hidden;
  transition: all ease .4s;
  z-index: -1;
}

.applicant-index .ul-tab-bar .active {
  font-weight:500;
  color:rgba(40,120,255,1);
  background: rgba(228,238,255,1);
}

.applicant-index .ul-tab-bar .active:before {
  opacity: 1;
  visibility: visible;
}

.applicant-index .ul-tab-bar .active:after {
  opacity: 1;
  visibility: visible;
}