.applicant-job {
  background: #FBFBFF;
}

.head {
  background: #fff;
  box-shadow:0rpx 0rpx 20rpx 0rpx rgba(50,14,59,0.08);
}
.bannerBox {
  position: relative;
}
.banner {
  width: 100%;
}
.swiper-dots {
  width: 100%;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 113rpx;
  font-size: 0;
}
.swiper-dots-item {
  display: inline-block;
  width:18rpx;
  height:6rpx;
  background:rgba(255,255,255,0.5);
  border-radius:3rpx;
  margin: 0 8rpx;
}
.swiper-dots-item.active {
  background: #FFDC29;
}

.select-box {
  width: 100%;
  font-size: 0;
  position: relative;
}
.select-box.fixed {
  position: fixed;
  left: 0;
  z-index: 4;
}

.select-bg, .select-area{
  width: 100%;
  background: rgba(0,0,0,0.5);
  position: absolute;
  left: 0;
  top: 49px;
  z-index: 2;
}
.select-tab {
  width: 100%;
  box-sizing: border-box;
  padding: 0 70rpx 0;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  box-shadow:0rpx 0 20rpx 0px rgba(101,39,145,0.04);
  position: relative;
  left: 0;
  display: flex;
  justify-content: space-between;
  z-index: 3;
}
.select-box .item {
  font-size:28rpx;
  font-weight:400;
  color:#5C565D;
  line-height:90rpx;
  position: relative;
  display: inline-block;
}
.select-tab .item.cur {
  color: #652791;
}
.select-tab .item.cur .icon {
  color: #652791;
  transform: rotate(180deg);
}
.select-tab .item.actived {
  color: #652791;
}
.select-tab .item.actived .iconfont {
  color: #652791;
}
.select-box .item .txt {
  max-width: 154rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 4rpx;
}
.select-box .picker {
  display: inline-block;
}

.select-box .iconfont {
  display: inline-block;
  color: #CDCBCF;
  vertical-align: top;
}

.select-area {
  width: 100%;
  padding: 64rpx 40rpx 32rpx;
  background: #fff;
  box-sizing: border-box;
  font-size: 0;
  max-height: 658rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.select-area-item {
  min-width: 150rpx;
  padding: 0 34rpx;
  line-height: 58rpx;
  border-radius:50rpx;
  border:1rpx solid #CDCBCF;
  margin: 0 22rpx 24rpx 0;
  display: inline-block;
  color: #626262;
  font-size:26rpx;
  font-weight:300;
  text-align: center;
  box-sizing: border-box;
}
.select-area-item.cur {
  color: #652791;
  border-color: #652791;
}
.select-area.city .select-area-item:nth-child(4), .select-area.salary .select-area-item:nth-child(4) {
  margin-right: 0;
}

.addIntention {
  width: 100%;
  height: 98rpx;
  padding: 0 48rpx 0 60rpx;
  font-size:28rpx;
  line-height: 28rpx;
  font-weight:300;
  color:#282828;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background:rgba(251,251,255,1);
  box-shadow:0rpx 0rpx 20rpx 0rpx rgba(50,14,59,0.08);
  border-radius:0rpx 0rpx 16rpx 16rpx;
}
.addIntention .addBtn {
  width:190rpx;
  height:60rpx;
  background:#FFDC29;
  border-radius:30rpx;
  float: right;
  line-height: 60rpx;
  font-size:26rpx;
  color:#652791;
  font-weight: 700;
  margin: 0;
  padding: 0;
}
.addIntention .addBtn .icon {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.list-box {
  margin: 20rpx 16rpx;
}


.noMore {
  width: 100%;
  padding: 21rpx 56rpx 24rpx 218rpx;
  height: 128rpx;
  position: relative;
  box-sizing: border-box;
}
.noMore .icon {
  width:119rpx;
  height:83rpx;
  position: absolute;
  top: 21rpx;
  left: 56rpx;
}
.noMore .txt {
  font-size:26rpx;
  font-weight:300;
  color:#282828;
  line-height:36rpx;
}

.botBtn {
  width:380rpx;
  height:88rpx;
  background:#FFDC29;
  box-shadow:0rpx 15rpx 28rpx 0rpx rgba(241,214,72,0.46);
  border-radius:44rpx;
  margin: 0 auto;
  font-size:30rpx;
  color:#282828;
  line-height: 88rpx;
}