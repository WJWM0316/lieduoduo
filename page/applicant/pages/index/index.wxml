<navbar isSearch="{{true}}" background="{{background}}" bindFilterResult="getFilterResult" filterResult="{{filterResult}}"></navbar>
<view class="applicant-job" style="margin-top: -{{navH}}px">
	<view hidden="{{!hasReFresh}}">
    <refreshStatus></refreshStatus>
  </view>
  <view class="head" style="padding-top: {{!bannerList.length ? navH : ''}}px">
    <view class="bannerBox" wx:if="{{bannerList.length > 0}}">
      <swiper
        class="swiper"
        autoplay
        circular
        bindchange="autoplay"
        style="height: {{bannerH}}px"
        >
        <swiper-item wx:for="{{bannerList}}" wx:key="{{index}}" bindtap="jumpBanner" data-url="{{item.targetUrl || item.otherUrl}}">
          <image class="banner" wx:if="{{isBangs}}" src="{{item.bigImgUrl}}" mode="widthFix"></image>
          <image class="banner" wx:else src="{{item.smallImgUrl}}" mode="widthFix"></image>
        </swiper-item>
      </swiper>
      <view class="swiper-dots" wx:if="{{bannerList.length > 1}}">
        <view wx:for="{{bannerList}}" wx:key="{{index}}" class="swiper-dots-item {{bannerIndex === index ? 'active' : ''}}"></view>
      </view>
    </view>
    <view class="select-box {{tabFixed ? 'fixed' : ''}}" style="{{tabFixed ? 'top:' + navH + 'px' : ''}}">
      <view class="select-tab">
        <view class="item {{filterResult.employeeIds || filterResult.industryIds || filterResult.financingIds ? 'actived' : ''}}"  bindtap="chooseType" data-type="company"><text class="txt">公司</text><i class="icon iconfont icon-zhishibiao"></i></view>
        <view class="item {{filterResult.positionTypeIds ? 'actived' : ''}}"  bindtap="chooseType" data-type="positionType"><text class="txt">类别</text><i class="icon iconfont icon-zhishibiao"></i></view>
        <view class="item {{filterResult.emolumentIds && filterResult.emolumentIds !== 1 ? 'actived' : ''}}"  bindtap="chooseType" data-type="emolument"><text class="txt">薪资</text><i class="icon iconfont icon-zhishibiao"></i></view>
      </view>
    </view>
  </view>
  <view class="addIntention" bindtap="addIntention" wx:if="{{!hasExpect && (filterResult.cityNums || filterResult.positionTypeIds || filterResult.emolumentIds)}}">
    <text>把你的筛选条件添加到求职意向</text>
    <button class="addBtn">立即添加<i class="icon iconfont icon-disejiantou-you"></i></button>
  </view>

  <view class="list-box" wx:if="{{filterList.list.length}}">
    <waterfallFlow wx:key="filterList" my-class="waterfallFlow" id="filterList" flowClass="{{'filterList'}}" value="{{filterList.list}}" page="{{filterList.pageNum - 1}}"></waterfallFlow>
  </view>
  <bottomStatus wx:if="{{!recommendList.list.length}}" status="{{filterList.onBottomStatus}}" listData="{{filterList.list}}" marginTop="{{30}}" desc="一大批优质机会即将上线">
    <view class="moreBtn" data-route="specialJob" bindtap="routeJump">去看看急速约面机会<i class="icon iconfont icon-disejiantou-you"></i></view>
  </bottomStatus>
  <view class="noMore" wx:if="{{filterList.isRequire && recommendList.list.length}}">
    <view class="icon"></view>
    <view class="txt">暂时没有更多符合条件的结果，下面为你推荐可能相关的机会</view>
  </view>
  <view class="list-box" wx:if="{{recommendList.list.length}}">
    <waterfallFlow wx:key="recommendList"  my-class="waterfallFlow" id="recommendList" flowClass="{{'recommendList'}}" value="{{recommendList.list}}" page="{{recommendList.pageNum - 1}}"></waterfallFlow>
    <bottomStatus status="{{recommendList.onBottomStatus}}" listData="[]" hasImg="{{recommendList.list.length ? false : true}}" marginTop="{{30}}" desc="一大批优质机会即将上线~">
      <view class="moreBtn" data-route="specialJob" bindtap="routeJump">去看看急速约面机会<i class="icon iconfont icon-disejiantou-you"></i></view>
    </bottomStatus>
  </view>
  <tabBar id="bottomRedDotBar"></tabBar>
  <bindPhone hide="{{hideLoginBox}}" hasClose="{{false}}"></bindPhone>
  <adPop></adPop>
  <followWechat wx:if="{{userInfo}}"></followWechat>
  <filterPop openPop="{{openPop}}" filterType="{{filterType}}" filterResult="{{filterResult}}" bindFilterResult="getFilterResult"></filterPop>
</view>